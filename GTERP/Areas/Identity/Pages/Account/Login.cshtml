                        </p>
                         @*  <h1>  GROWTH WORK  </h1>
                        <h3>  HRMS  </h3> *@
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-12 ">
                <div class="login-wrap">

                    <div class="login-html">
                        <div>
                            <span style="color:red">@ViewBag.error</span>
                        </div>
                        <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Log In</label>
                        <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">Sign Up</label>
                        <div class="login-form">
                            <form asp-page-handler="Login" method="post">
                                @Html.AntiForgeryToken()
                                <div class="sign-in-htm">
                                    <div class="form-group">
                                        <label asp-for="Input.Email"></label>
                                        <input asp-for="Input.Email" class="form-control" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Input.Password"></label>
                                        <input asp-for="Input.Password" class="form-control" />
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <div class="checkbox">
                                            <label asp-for="Input.RememberMe">
                                                <input asp-for="Input.RememberMe" />
                                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                                            </label>
                                        </div>
                                    </div>
                                    <div class="group">
                                        <input type="submit" class="button" value="Sign In">
                                    </div>
                                    <div class="hr"></div>

                                    <div class="foot-lnk">
                                        <a id="forgot-password"
                                           href="https://gtrbd.net/support/Identity/Account/ForgotPassword">Forgot your password?</a>

                                    </div>


                                    <div class="text-white" style="font:bold">
                                        @Html.ValidationSummary()
                                    </div>

                                </div>



                            </form>
                            @*<form asp-page-handler="Register" method="post">
                                @Html.AntiForgeryToken()*@


                                <div class="sign-up-htm">
                                   

                                    <div class="group p-5">
                                        @*<input type="button" href="https://www.gtrbd.net/support" class="button" value="Click For Registration">*@
                                  <a href="https://www.gtrbd.net/support" target="_blank" class="btn btn-warning btn-block text-center">Click Here For Registartion</a>
                                    </div>

                                    <div class="hr"></div>
                                    <div class="foot-lnk">
                                        @*<label for="tab-1">Already Member?</label>*@
                                        <input id="tab-1" name="tab" class="sign-in"><label for="tab-1" class="tab">Already Member?</label>
                                        @*<a class="" href="@Url.Action("ForgotPassword", "Account")">Forgot your password? </a>*@
                                    </div>
                                </div>
                            @*</form>*@
                        </div>
                    </div>
                </div>
            </div>



        </div>
    </div>


</body>
</html>




