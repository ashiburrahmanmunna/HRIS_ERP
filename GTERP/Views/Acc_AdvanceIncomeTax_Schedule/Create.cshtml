@section Scripts{
    <script type="text/javascript">


        $("#AccId").select2();

     function VoucherType_delete() {

         var GovtScheduleId = $("#GovtScheduleId").val();
         //alert(GovtScheduleId);
            $.ajax({

                url: '@Url.Action("Delete", "Acc_AdvanceIncomeTax_Schedule")',
                //url: '@Url.Action("Delete")',
                data: JSON.stringify({ id: GovtScheduleId }), //use id here
                //data: JSON.stringify(salesmain),
                type: 'POST',
                contentType: 'application/json;',
                dataType: 'json',
                success: function (result) {

                    if (result.Success == "1") {
                        window.location.href = '@Url.Action("Index", "Acc_AdvanceIncomeTax_Schedule")';
                    }
                    else {
                        alert(result.ex);
                    }
                }
            });
    }




