@section Scripts{
    <script type="text/javascript">


        $("#AccId").select2();

     function VoucherType_delete() {

         var VoucherSubCheckId = $("#VoucherSubCheckId").val();
         //alert(VoucherSubCheckId);
            $.ajax({

                url: '@Url.Action("DeleteBankReconcile", "Accounts")',
                //url: '@Url.Action("Delete")',
                data: JSON.stringify({ id: VoucherSubCheckId }), //use id here
                //data: JSON.stringify(salesmain),
                type: 'POST',
                contentType: 'application/json;',
                dataType: 'json',
                success: function (result) {

                    if (result.Success == "1") {
                        window.location.href = '@Url.Action("BankReconcileList", "Accounts")';
                    }
                    else {
                        alert(result.ex);
                    }
                }
            });
    }




    </script>
}