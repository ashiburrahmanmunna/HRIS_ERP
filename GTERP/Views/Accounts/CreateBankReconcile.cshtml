                                                    </span>
                                                </div>
                                                <input asp-for="dtChkTo" class="form-control tg" type="date" autocomplete="off" />
                                                <span asp-validation-for="dtChkTo" asp-f class="text-danger"></span>
                                            </div>
                                        </div>



                                        @*<div class="col-md-6 mb-3">
                                @Html.LabelFor(model => model.dtChk, htmlAttributes: new { @class = "control-label" })

                                @Html.EditorFor(model => model.dtChk, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.dtChk, "", new { @class = "text-danger" })

                            </div>

                            <div class="col-md-6 mb-3">
                                @Html.LabelFor(model => model.dtChkTo, htmlAttributes: new { @class = "control-label" })

                                @Html.EditorFor(model => model.dtChkTo, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.dtChkTo, "", new { @class = "text-danger" })

                            </div>*@
                                    </div>


                                    <div class="row">


                                        <div class="col-md-12 mb-2">
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <label asp-for="AccId" class="col-sm-1 control-label"> &nbsp; Account Name &nbsp; &nbsp; </label>
                                                    </span>
                                                </div>
                                                <select asp-for="AccId" class="form-control" asp-items="@ViewBag.AccId">
                                                    <option>--Select Account--</option>
                                                </select>
                                                <span asp-validation-for="AccId" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>


                                    <div class="row">


                                        <div class="col-md-5 mb-2">
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <label asp-for="Criteria" class="col-sm-1 control-label"> &nbsp; Criteria &nbsp; &nbsp; </label>
                                                    </span>
                                                </div>
                                                <select asp-for="Criteria" class="form-control" asp-items="@ViewBag.Criteria">
                                                    <option>--Select Criteria--</option>
                                                </select>
                                                <span asp-validation-for="Criteria" class="text-danger"></span>
                                            </div>
                                        </div>


                                        <div class="col-md-7 mb-2">
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <label asp-for="Amount" class="col-sm-4 control-label">&nbsp;Amount </label>
                                                    </span>
                                                </div>
                                                <input asp-for="Amount" class="form-control" autocomplete="off" />
                                                <span asp-validation-for="Amount" class="text-danger"></span>
                                            </div>
                                        </div>



                                        <div class="col-md-12 col-6 mb-2">
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
