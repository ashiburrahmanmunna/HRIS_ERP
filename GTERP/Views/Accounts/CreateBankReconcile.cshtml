    {
        @Html.AntiForgeryToken()
        <div class="container">

            <div class="row">
                <div class="col-md-8 offset-md-2 col-12">
                    <div id="modalbodyrakin" class="card">
                        <div class="card-header">
                            <h4 id="styletext">Bank Reconcil Entry - @ViewBag.Title</h4>
                        </div>
                        <div class="card-body">
                            <div>
