                                                        <label asp-for="ChkNo" class="col-sm-4 control-label">&nbsp;Check / FDR / Other Information </label>
                                                    </span>
                                                </div>
                                                <input asp-for="ChkNo" class="form-control" autocomplete="off" />
                                                <span asp-validation-for="ChkNo" class="text-danger"></span>
                                            </div>
                                        </div>


                                        @*<div class="col-md-12 mb-3">
                                @Html.LabelFor(model => model.ChkNo, htmlAttributes: new { @class = "control-label" })

                                @Html.EditorFor(model => model.ChkNo, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ChkNo, "", new { @class = "text-danger" })

                            </div>*@
                                    </div>

                                    <div class="row">

                                        <div class="col-md-6 col-6 mb-2">
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <label asp-for="dtChk" class="col-sm-4 control-label">From Date</label>
                                                    </span>
