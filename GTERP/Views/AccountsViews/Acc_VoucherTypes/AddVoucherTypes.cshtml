@model GTERP.Models.Acc_VoucherType
<style>

    #styletext {
        color: transparent;
        background: #666666;
        -webkit-background-clip: text;
        -moz-background-clip: text;
        background-clip: text;
        text-shadow: 0px 3px 3px rgba(255,255,255,0.5);
        font-weight: 100;
        font-size: 40px;
    }
</style>


<body>
    @using (Html.BeginForm("Create", "Acc_VoucherTypes", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="container" style="max-width:700px;">

            <div class="py-7 text-center">
                <h1 id="styletext">Voucher No Prefix Setup</h1>
                <p class="lead"></p>
            </div>
            <div id="modalbodyrakin" class="row card p-4">
                <div class="col-md-12 order-md-1">
                    <h4 class="mb-3">Voucher No Prefix Setup</h4>
                    <div class="needs-validation" novalidate>
                        <div class="row">

                            <br>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @if (Model != null)
                            {

                                <input type="hidden" id="VoucherTypeId" name="VoucherTypeId" value="@Model.VoucherTypeId" />


                            }
                            else
                            {
                                <input type="hidden" id="comid" name="comid" value="" />
                            }





                        <div class="col-md-12 col-12">
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <span class="input-group-text py-0">
                                        @Html.LabelFor(model => model.VoucherTypeName, htmlAttributes: new { @class = "control-label" })
                                    </span>
                                </div>
                                @Html.EditorFor(model => model.VoucherTypeName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.VoucherTypeName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-12 col-12">
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <span class="input-group-text py-0">
                                        @Html.LabelFor(model => model.VoucherTypeNameShort, htmlAttributes: new { @class = "control-label" })
                                    </span>
                                </div>
                                @Html.EditorFor(model => model.VoucherTypeNameShort, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.VoucherTypeNameShort, "", new { @class = "text-danger" })
                            </div>
                        </div>

                            <div class="col-md-12 col-12">
                                <div class="input-group mb-2">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text py-0">
                                            @Html.LabelFor(model => model.VoucherTypeClass, htmlAttributes: new { @class = "control-label" })
                                        </span>
                                    </div>
                                    @Html.EditorFor(model => model.VoucherTypeClass, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.VoucherTypeClass, "", new { @class = "text-danger" })
                                </div>
                            </div>
               
                            <div class="col-md-12 col-12">
                                <div class="input-group mb-2">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text py-0">
                                            @Html.LabelFor(model => model.VoucherTypeButtonClass, htmlAttributes: new { @class = "control-label" })
                                        </span>
                                    </div>

                                    @Html.EditorFor(model => model.VoucherTypeButtonClass, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.VoucherTypeButtonClass, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-12 col-12">
                                <div class="input-group mb-2">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text py-0">
                                            @Html.LabelFor(model => model.isSystem, htmlAttributes: new { @class = "control-label" })
                                        </span>
                                    </div>
                                    <div class="input-group-append">
                                        <span class="input-group-text">
                                            @Html.CheckBoxFor(model => model.isSystem, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.isSystem, "", new { @class = "text-danger" })
                                        </span>
                                    </div>
                         
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-3"></div>
                            <div class="col-md-3 col-12">
                                @if (ViewBag.Title == "Create")
                                {
                                    <input type="submit" value="Create" class="btn btn-primary btn-block rounded-0" />

                                    @*<button class="btn btn-primary btn-lg btn-block rounded-0" type="button" onclick="Products_save()">Save</button>*@
                                }
                                else if (ViewBag.Title == "Edit")
                                {
                                    <input type="submit" value="Update" class="btn btn-warning btn-block rounded-0" />

                                    @*<button class="btn btn-warning btn-lg btn-block rounded-0" type="button" onclick="Products_save()">Update</button>*@
                                }
                                else if (ViewBag.Title == "Delete")
                                {
                                    <button class="btn btn-danger btn-lg btn-block rounded-0" type="button" onclick="VoucherType_delete()">Delete</button>
                                }
                            </div>
                            <div class="col-md-3 col-12">
                                @Html.ActionLink("Back", "Index", "Acc_VoucherTypes", null, new { @class = "btn btn-info btn-block rounded-0" })
                            </div>
                            <div class="col-md-3"></div>
                        </div>

                    </div>

                </div>
            </div>

        </div>
    }

</body>


@section Scripts{
    <script type="text/javascript">

     function VoucherType_delete() {

         var VoucherTypeId = $("#VoucherTypeId").val();
         //alert(VoucherTypeId);
            $.ajax({

                url: '@Url.Action("Delete", "Acc_VoucherTypes")',
                //url: '@Url.Action("Delete")',
                data: JSON.stringify({ id: VoucherTypeId }), //use id here
                //data: JSON.stringify(salesmain),
                type: 'POST',
                contentType: 'application/json;',
                dataType: 'json',
                success: function (result) {

                    if (result.Success == "1") {
                        window.location.href = '@Url.Action("Index", "Acc_VoucherTypes")';
                    }
                    else {
                        alert(result.ex);
                    }
                }
            });
    }




    </script>
}