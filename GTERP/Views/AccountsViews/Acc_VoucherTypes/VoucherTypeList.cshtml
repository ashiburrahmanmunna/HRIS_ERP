@model IEnumerable<GTERP.Models.Acc_VoucherType>

<div class="container-fluid">
    <div class="text-center">
        <div class="row my-2">
            <div class="col-md-3 col-12">
                @Html.ActionLink("Voucher Type Creation", "Create", null, null, new { @class = "btn btn-outline-info btn-block rounded-0", @id = "btnBack" })

            </div>

            <div class="col-md-9 col-12">
                <h2 id="styletext">Voucher Prefix Setup List</h2>
            </div>
        </div>

    </div>

    <form class="card p-2">
        <div class="table-responsive text-nowrap">
            <table id="tbllist" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
                <thead class="">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.VoucherTypeNameShort)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.VoucherTypeName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.VoucherTypeClass)
                        </th>
                        <th>
                            Action
                        </th>

                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.VoucherTypeNameShort)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.VoucherTypeName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.VoucherTypeClass)
                            </td>
                            <td>
                                <span data-toggle="tooltip" title="Edit!">
                                    @Html.ActionLink(" ", "Edit", new { id = item.VoucherTypeId }, new { @class = "fas fa-edit btn btn-warning btn-xs", @target = "_blank" })
                                </span>
                                <span data-toggle="tooltip" title="Delete!">
                                    @Html.ActionLink(" ", "Delete", new { Id = item.VoucherTypeId }, new { @class = "far fa-trash-alt btn btn-danger btn-xs" })
                                </span>


                            </td>
                        </tr>
                    }
                    </tbody>
            </table>
        </div>
        <br />
    </form>
</div>




