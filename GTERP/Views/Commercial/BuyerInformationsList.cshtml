@model IEnumerable<GTERP.Models.BuyerInformation>

<div class="container-fluid">

 
        <div class="row text-center mb-2">

            <div class="col-md-3 col-12">
                @Html.ActionLink("Buyer Creation", "CreateBuyerInformations", null, null, new { @class = "btn btn-outline-info btn-block rounded-0", @id = "btnBack" })

            </div>

            <div class="col-md-3 col-12">
                <h2 id="styletext">Buyer List</h2>
            </div>
            <div class="col-md-6">

            </div>

        </div>
 

    <form class="card p-2 table-responsive">
        <table id="tbllist" class="table table-striped table-bordered table-sm  table-hover" cellspacing="0">
            <thead class="text-nowrap">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.BuyerGroups.BuyerGroupName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BuyerName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Country.CountryName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ContactPerson)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeImport.EmployeeName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeExport.EmployeeName)
                    </th>


                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address2)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LocalOffice)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LCMargin)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ShippingMarks)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DefferredPaymentDays)
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.BuyerGroups.BuyerGroupName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BuyerName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Country.CountryName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContactPerson)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmployeeImport.EmployeeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmployeeExport.EmployeeName)
                        </td>

                        <td class="text-break">
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address2)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LocalOffice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LCMargin)
                        </td>
                        <td class="text-break">
                            @Html.DisplayFor(modelItem => item.ShippingMarks)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DefferredPaymentDays)
                        </td>
                        <td class="text-nowrap">
                            <span data-toggle="tooltip" title="Edit!">
                                @Html.ActionLink(" ", "EditBuyerInformations", new { id = item.BuyerId }, new { @class = "fas fa-edit btn btn-warning btn-xs", @target = "_blank" })
                            </span>
                            <span data-toggle="tooltip" title="Delete!">
                                @Html.ActionLink(" ", "DeleteBuyerInformations", new { Id = item.BuyerId }, new { @class = "far fa-trash-alt btn btn-danger btn-xs" })
                            </span>
                        </td>
                        @*<td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.BuyerId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.BuyerId })
                </td>*@
                    </tr>
                }
            </tbody>
        </table>
        <br />
    </form>
</div>

