@model IEnumerable<GTERP.Models.PortOfDischarge>

<div class="container-fluid">


    <div class="row text-center mb-2">
        <div class="col-md-3 col-12">
            @Html.ActionLink("Port Of Discharge Creation", "CreatePortOfDischarges", null, null, new { @class = "btn btn-outline-info btn-block rounded-0", @id = "btnBack" })

        </div>

        <div class="col-md-4 col-12">
            <h2 id="styletext">Port Of Discharge List</h2>
        </div>
        <div class="col-md-5">

        </div>
    </div>
    <form class="card p-2">
        <div class="table-responsive">
            <table id="tbllist" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
                <thead class="">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.PortCode)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PortOfDischargeName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Countrys.CountryName)
                        </th>

                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.PortCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PortOfDischargeName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Countrys.CountryName)
                            </td>
                            <td>

                                <span data-toggle="tooltip" title="Edit!">
                                    @Html.ActionLink(" ", "EditPortOfDischarges", new { id = item.PortOfDischargeId }, new { @class = "fas fa-edit btn btn-warning btn-xs", @target = "_blank" })
                                </span>
                                <span data-toggle="tooltip" title="Delete!">
                                    @Html.ActionLink(" ", "DeletePortOfDischarges", new { Id = item.PortOfDischargeId }, new { @class = "far fa-trash-alt btn btn-danger btn-xs" })
                                </span>


                            </td>

                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </form>
</div>




