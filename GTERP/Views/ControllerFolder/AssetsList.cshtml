@model IEnumerable<GTERP.Models.Asset>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="CreateAssets" asp-controller="ControllerFolder">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AssetName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurchaseDate)
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.AssetCategory)*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AssetName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PurchaseDate)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.AssetCategory.AssetCategoryId)*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company.AppKey)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location.LocationName)
            </td>
            <td>
                <a asp-action="EditAssets" asp-route-id="@item.AssetId">Edit</a> |
                <a asp-action="AssetsDetails" asp-route-id="@item.AssetId">Details</a> |
                <a asp-action="DeleteAssets" asp-route-id="@item.AssetId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
