                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.isProduct)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsDoller)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.isCorporate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.isPOSprint)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsService)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.isOldDue)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.isShortcutSale)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.isRestaurantSale)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.isTouch)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.isShoeSale)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.isIMEISale)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.isMultipleWh)
                        </td>
                         <td>
                            @Html.DisplayFor(modelItem => item.IsEPZ)
                        </td>
                        <td id="uploadPhoto">
                            @if (item.ComImageHeader == null)
                            {
                                <img src="@Url.Content("Content/img/" + 0 + ".png")" class="img-thumbnail" multiple />
                            }
                            else
                            {
                                <img src="data:image/jpeg;base64,@(Convert.ToBase64String(item.ComImageHeader))" class="img-thumbnail">

                            }
                        </td>
                        <td id="uploadPhoto">
                            @if (item.ComLogo == null)
                            {
                                <img src="@Url.Content("Content/img/" + 0 + ".png")" class="img-thumbnail" multiple />
                            }
                            else
                            {
                                <img src="data:image/jpeg;base64,@(Convert.ToBase64String(item.ComLogo))" class="img-thumbnail">

                            }
                        </td>
                        <td class="text-nowrap">
                            <span data-toggle="tooltip" title="Edit!">
                                @Html.ActionLink(" ", "EditCompanies", new { id = item.ComId }, new { @class = "fas fa-edit btn btn-warning btn-xs", @target = "_blank" })
                            </span>
                            <span data-toggle="tooltip" title="Delete!">
                                @Html.ActionLink(" ", "DeleteCompanies", new { Id = item.ComId }, new { @class = "far fa-trash-alt btn btn-danger btn-xs" })
                            </span>


                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </form>
