                        @Html.DisplayNameFor(model => model.isProduct)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsDoller)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.isCorporate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.isPOSprint)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsService)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.isOldDue)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.isShortcutSale)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.isRestaurantSale)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.isTouch)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.isShoeSale)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.isIMEISale)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.isMultipleWh)
                    </th>
                     <th>
                        @Html.DisplayNameFor(model => model.IsEPZ)
                    </th>
                    <th width="5%">
                        @Html.DisplayNameFor(model => model.ComImageHeader)
                    </th>
                    <th width="5%">
                        @Html.DisplayNameFor(model => model.ComLogo)
                    </th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="100">
                            @Html.DisplayFor(modelItem => item.vBusinessTypeCompany.Name)
                        </td>
                        @*<td>
                    @Html.DisplayFor(modelItem => item.vCompanyCompany.CompanyName)
                </td>*@
