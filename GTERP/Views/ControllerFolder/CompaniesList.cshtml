@model IEnumerable<GTERP.Models.Company>
@{
    ViewBag.Title = "Company Info Input";
}
<div class="container-fluid">
        <div class="row text-center mb-2">

            <div class="col-md-3 col-12">
                @Html.ActionLink("Company Creation", "CreateCompanies", null, null, new { @class = "btn btn-outline-info btn-block rounded-0", @id = "btnBack" })
            </div>

            <div class="col-md-3 col-12">
                <h2 id="styletext">Company List</h2>
            </div>
            <div class="col-md-6">

            </div>
        </div>
  

    <form class="card p-2 table-responsive">
        <table id="tbllist" class="table table-striped table-bordered table-sm  table-hover" cellspacing="0" width="100%">
            <thead class="text-nowrap">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.vBusinessTypeCompany.Name)
                    </th>
                    @*<th>
                            @Html.DisplayNameFor(model => model.vCompanyCompany.CompanyName)
                        </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.vCountryCompany.CountryName)
                    </th>
