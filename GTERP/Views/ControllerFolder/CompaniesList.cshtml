                        </td>
                        <td >
                            @Html.DisplayFor(modelItem => item.comPhone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.comPhone2)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.comEmail)
                        </td>
                        <td>
                             @Html.DisplayFor(modelItem => item.comWeb)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DecimalField)
