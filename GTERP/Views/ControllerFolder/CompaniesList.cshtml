                        @Html.DisplayNameFor(model => model.CompanyShortName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PrimaryAddress)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SecoundaryAddress)
                    </th>
                    <th>
