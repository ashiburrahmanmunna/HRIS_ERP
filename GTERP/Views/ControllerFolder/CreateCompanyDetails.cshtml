                                            </div>
                                            @Html.EditorFor(model => model.Hr_Email, new { htmlAttributes = new { @class = "form-control" ,@maxlength = "50" } })
                                            @Html.ValidationMessageFor(model => model.Hr_Email, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-md-12 col-12">
                                        <div class="input-group mb-2">
