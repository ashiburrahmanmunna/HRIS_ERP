@model IEnumerable<GTERP.Models.ModuleGroup>


<form action="" method="post">

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3 col-12">
                @Html.ActionLink("Module Group Creation", "CreateModuleGroups", null, null, new { @class = "btn btn-outline-info btn-block rounded-0", @id = "btnBack" })
            </div>

            <div class="col-md-9 col-12">
                <h2 id="styletext">Module Group List</h2>
            </div>
        </div>
    
    <div class="card p-2">
        <div class="table-responsive">
            <table id="tbllist" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.vModule.ModuleCode)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ModuleGroupName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ModuleGroupCaption)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ImagePath)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ImageExtension)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SLNo)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.vModule.ModuleCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ModuleGroupName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ModuleGroupCaption)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.ImagePath)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ImageExtension)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SLNo)
                            </td>
                            <td>
                                <span data-toggle="tooltip" title="Edit">
                                    @Html.ActionLink(" ", "EditModuleGroups", new { id = item.ModuleGroupId }, new { @class = "fas fa-edit btn btn-warning btn-xs", @target = "_blank" })
                                </span>
                                <span data-toggle="tooltip" title="Delete">
                                    @Html.ActionLink(" ", "DeleteModuleGroups", new { Id = item.ModuleGroupId }, new { @class = "far fa-trash-alt btn btn-danger btn-xs" })
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    </div>
</form>

