@model IEnumerable<GTERP.ViewModels.DailyAttendanceActive>

    <link href="~/Content/ProjectLibFile/css/customCssFile/customFormStyle.css" rel="stylesheet" />
    <table id="tblLate" class="table table-bordered table-hover table-striped text-nowrap " style="width:100%">
        <thead>
            <tr>
                <th>Emp Code</th>
                <th>Emp Name</th>
                <th>Dept. Name</th>
                <th>Sect. Name</th>
                <th>Desig. Name</th>
                <th>Floor Name</th>
                <th>Line Name</th>
            <th>Shift Name</th>
            <th>Punch Date</th>
                <th>TimeIn</th>
                <th>TimeOut</th>
                <th>Late</th>
                <th>OtHour</th>
                <th>Status</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var a in Model)
            {
                <tr>
                    <td>@a.EmpCode</td>
                    <td>@a.EmpName</td>
                    <td>@a.DeptName</td>
                    <td>@a.SectName</td>
                    <td>@a.DesigName</td>
                    <td>@a.FloorName</td>
                    <td>@a.LineName</td>
                <td>@a.ShiftName</td>
                <td>@a.DtPunchDate.ToString("dd-MMM-yyyy")</td>
                    <td>@a.TimeIn</td>
                    <td>@a.TimeOut</td>
                    <td>@a.Late</td>
                    <td>@a.OTHour</td>
                    <td>@a.Status</td>
                </tr>
            }
        </tbody>
    </table>

    @section Scripts{
        <script type="text/javascript" src="https://cdn.datatables.net/select/1.3.3/js/dataTables.select.js"></script>
        @*<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.js"></script>*@
        <script>
            $(document).ready(function () {
                $('#tblLate thead tr').clone(true).appendTo('#tblLate thead');
                $('#tblLate thead:last tr:eq(0) th').each(function (i) {
                    var title = $(this).text().trim();
                    $(this).html('<input type="text" class="form-control"   placeholder="' + title + '" />');

                    $('input', this).on('keyup change', function () {
                        if (table.column(i).search() !== this.value) {
                            table
                                .column(i)
                                .search(this.value)
                                .draw();
                        }
                    });
                });


                var table = $('#tblLate').DataTable({
                    dom: '<"dom_wrapper fh-fixedHeader"flB>tip',
                    "searching": true,
                    paging: false,
                    scrollY: true,
                    scrollX: true,
                    scrollY: '300px',
                    scrollCollapse: true,
                    "language": {
                        sLengthMenu: " _MENU_",
                        search: "",
                        searchPlaceholder: "Search..."
                    }
                });
            });</script>
    }
