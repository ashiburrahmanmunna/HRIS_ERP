@model IEnumerable<GTERP.ViewModels.DailyAttendanceDepartmentWiseData>
    <link href="~/Content/ProjectLibFile/css/customCssFile/customFormStyle.css" rel="stylesheet" />
<div>
    <table class="table table-bordered table-hover table-striped text-nowrap " id="tblAttendanceSumData" style="width:100% !important">
        <thead>
            <tr>
                <th>Emp Code</th>
                <th>Emp Name</th>
                <th>Emp Type</th>
                <th>Department</th>
                <th>Section</th>
                <th>Designation</th>
                <th>Floor Name</th>
                <th>Line Name</th>
                <th>Grade</th>
                <th>Punch Date</th>
                <th>TimeIn</th>
                <th>TimeOut</th>
                <th>Late</th>
                <th>OTHour</th>
                <th>Status</th>
            </tr>
        </thead>
        @foreach (var a in Model)
        {
            <tr>
                <td>@a.EmpCode</td>
                <td>@a.EmpName</td>
                <td>@a.EmpTypeName</td>
                <td>@a.DeptName</td>
                <td>@a.SectName</td>
                <td>@a.DesigName</td>
                <td>@a.FloorName</td>
                <td>@a.LineName</td>
                <td>@a.GradeName</td>
                <td>@a.dtPunchDate.ToString("dd-MMM-yyyy")</td>
                <td>@a.TimeIn</td>
                <td>@a.TimeOut</td>
                <td>@a.Late</td>
                <td>@a.OTHour</td>
                <td>@a.Status</td>
            </tr>
        }

    </table>
</div>
