@model IEnumerable<GTERP.ViewModels.SalaryCheck>
    
    <link href="~/Content/ProjectLibFile/css/customCssFile/customFormStyle.css" rel="stylesheet" />
    <div>
        <table class="table table-bordered table-hover table-striped text-nowrap " id="tblAttendanceSumData" style="width:100% !important">
            <thead>
                <tr>
                    <th>EmpCode</th>
                    <th>EmpName</th>
                    <th>EmpType</th>
                    <th>Department</th>
                    <th>SectName</th>
                    <th>DesigName</th>
                    <th>Floor</th>
                    <th>Line</th>
                    <th>DtJoin</th>
                    <th>PayMode</th>
                    <th>BankAccount</th>
                    <th>GS</th>
                    <th>BS</th>
                    <th>HR</th>
                    <th>MA</th>
                    <th>ConvAllow</th>
                    <th>FoodAllow</th>
                    <th>OTHour</th>
                    <th>OT</th>
                    <th>AttBonus</th>
                    <th>OtherAllow</th>
                    <th>TotalPayable</th>
                    <th>Absent</th>
                    <th>Adv</th>
                    <th>PF</th>
                    <th>Stamp</th>
                    <th>LunchDeduct</th>
                    <th>OthersDeduct</th>
                    <th>TotalDeduct</th>
                    <th>Netpayable</th>                   
                </tr>
            </thead>
            @foreach (var a in Model)
            {
                <tr>
                    <td>@a.EmpCode</td>
                    <td>@a.EmpName</td>
                    <td>@a.EmpTypeName</td>
                    <td>@a.DeptName</td>
                    <td>@a.SectName</td>
                    <td>@a.DesigName</td>
                    <td>@a.FloorName</td>
                    <td>@a.LineName</td>
                    @*<td>@a.DtJoin.ToString("dd-MMM-yyyy")</td>*@
                    <td>@DateTime.Parse(a.DtJoin).ToString("dd-MMM-yyyy")</td>
                    <td>@a.PayModeName</td>
                    <td>@a.AccountNumber</td>
                    <td>@a.GS</td>
                    <td>@a.BS</td>
                    <td>@a.HR</td>
                    <td>@a.MA</td>
                    <td>@a.ConvAllow</td>
                    <td>@a.FoodAllow</td>
                    <td>@a.OTHrTtl</td>
                    <td>@a.OT</td>
                    <td>@a.AttBonus</td>
                    <td>@a.OtherAllow</td>
                    <td>@a.TotalPayable</td>
                    <td>@a.AB</td>
                    <td>@a.ADV</td>
                    <td>@a.PF</td>
                    <td>@a.Stamp</td>
                    <td>@a.LunchDeduct</td>
                    <td>@a.OthersDeduct</td>
                    <td>@a.TotalDeduct</td>
                    <td>@a.NetSalaryPayable</td>
                </tr>
            }

        </table>
    </div>
