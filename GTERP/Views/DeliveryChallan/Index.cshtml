                                return output;
                            }
                            else {
                                return null;
                            }
                        }

                    },
                          { "title": "Fiscal Year", "data": "FiscalYear", "searchable": true  },
                          { "title": "Fiscal Month", "data": "FiscalMonth", "searchable": true   },

                          { "title": "Dealer Code", "data": "DealerCode", "searchable": true   },

                          { "title": "Dealer", "data": "Dealer", "searchable": true   },

                    {
                        "title": "Action",
                        "data": { DeliveryChallanId: "DeliveryChallanId" },

                        "render": function (data, type, row) {
                            var myUrledit = '@Url.Action("Edit", "DeliveryChallan")/' + data.DeliveryChallanId;
