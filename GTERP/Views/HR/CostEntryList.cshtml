@model IEnumerable<GTERP.ViewModels.PRcostEntryVM>

@{
    ViewData["Title"] = "PR Cost Entries";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card-header">
    Create Cost Entry
</div>
<div class="text-center">
    <div class="row mb-2">
        <div class="col-md-2 col-2">
            @Html.ActionLink("Create New", "CreateCostEntry", null, null, new { @class = "btn btn-outline-info btn-block rounded-0", @id = "btnBack" })
        </div>
    </div>
</div>
@* <a asp-action="DailyProductionRules" asp-controller="HR" class="btn btn-primary">Create New</a> *@

<div class="card p-2">
    <table id="costEntryTable" class="table table-hover table-bordered tbllist  table-hover" cellspacing="0" width="100%">
        <thead>
                <tr>
                    <th>Serial No.</th>
                    <th>Vendor Name</th>
                    <th>Category</th>
                    <th>Safety Shoe</th>
                    <th>Uniform</th>
                    <th>Service Commission</th>
                    <th>Medical Cost</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var entry in Model@* .OrderBy(e => e.UnitId) *@)
                    {
                        <tr>
                            <td>@(Model.ToList().IndexOf(entry) + 1)</td>
                            <td>@entry.Cat_Unit?.UnitName</td>
                            <td>@entry.CategoryName</td>
                            <td>@entry.SafetyShoe</td>
                            <td>@entry.Uniform</td>
                            <td>@entry.ServiceComission</td>
                            <td>@entry.MedicalCost</td>
                        <td class="text-nowrap">
                            <span data-toggle="tooltip" title="Edit!">
                                @Html.ActionLink(" ", "CostEntryDetails", new { id = entry.id }, new { @class = "fas fa-edit btn btn-warning btn-xs", @target = "_blank" })
                            </span>
                            <span data-toggle="tooltip" title="Delete!">
                                @Html.ActionLink(" ", "CostEntryDelete", new { id = entry.id }, new { @class = "far fa-trash-alt btn btn-danger btn-xs" })
                            </span>
                        </td>

                           
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
