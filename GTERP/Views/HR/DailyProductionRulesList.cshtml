@model IEnumerable<GTERP.Models.DailyProductionRules>
@{
    ViewData["Title"] = "DailyProductionRules";
}

<div class="card-header">
    Daily Production Rules
</div>
<div class="text-center">
    <div class="row mb-2">
        <div class="col-md-2 col-2">
            @Html.ActionLink("Create New", "DailyProductionRules", null, null, new { @class = "btn btn-outline-info btn-block rounded-0", @id = "btnBack" })
        </div>
    </div>
</div>
        @* <a asp-action="DailyProductionRules" asp-controller="HR" class="btn btn-primary">Create New</a> *@

        <div class="card p-2">
            <table id="costEntryTable" class="table table-hover table-bordered tbllist  table-hover" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Serial No.</th>
                        @* <th>Employee Code</th> *@
                        <th>Create Date</th>
                        <th>FgDispatch1st</th>
                        <th>FgDispatch1st2nd</th>
                        <th>Boo</th>
                        <th>Unloading</th>
                        <th>Other cost</th>

                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        @foreach (var entry in Model.OrderBy(e => e.Id))
                        {
                                            <tr>
                                                <td>@(Model.ToList().IndexOf(entry) + 1)</td>
                                @* <td>@entry.EmpCode</td> *@
                        <td>@entry.CreateDate.ToString("dd-MMM-yyyy")</td>


                                                <td>@entry.FgDisPatch1st</td>
                                                <td>@entry.FgDispatch2nd</td>
                                                <td>@entry.Boo2</td>
                                                <td>@entry.unloading</td>
                                                <td>@entry.OtherCost</td>

                                                <td class="text-nowrap">
                                                    <span data-toggle="tooltip" title="Edit!">
                                                        @Html.ActionLink(" ", "DailyProductionRulesDetails", new { id = entry.Id }, new { @class = "fas fa-edit btn btn-warning btn-xs", @target = "_blank" })
                                                    </span>
                                                    <span data-toggle="tooltip" title="Delete!">
                                                        @Html.ActionLink(" ", "DailyProductionRulesDelete", new { id = entry.Id }, new { @class = "far fa-trash-alt btn btn-danger btn-xs" })
                                                    </span>
                                                </td>

                                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
