@model IEnumerable<GTERP.Models.HR_Emp_Behave>
@{
    ViewBag.Title = "Employee Behaviour Info";
}

<div class="container-fluid">

    <div class="text-center">
        <div class="row mb-2">
            <div class="col-md-3 col-12">
                @Html.ActionLink("Employee Behaviour Information", "CreateEmployeeBehaviour", null, null, new { @class = "btn btn-outline-info btn-block rounded-0", @id = "btnBack" })
            </div>
            <div class="col-md-9 col-12">
                <h2 id="styletext">Employee List</h2>
            </div>
        </div>
    </div>
    <form class="card p-2">
        <div class="table-responsive text-nowrap">
            <table id="tbllist" class="table table-striped table-bordered table-sm  table-hover" cellspacing="0" width="100%">
                <thead class="">
                    <tr>

                        <th>
                            @Html.DisplayNameFor(model => model.Employee.EmpCode)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Employee.EmpName)
                        </th>
                        @*<th>
                            @Html.DisplayNameFor(model => model.HR_Emp_Info.Cat_Designation.DesigName)
                        </th>*@
                        <th>
                            @Html.DisplayNameFor(model => model.dtNotice)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.dtEvent)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NoticeType)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.ViolenceDesc)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Decision)
                        </th>


                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.Employee.EmpCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Employee.EmpName)
                            </td>
                            @*<td>
                                @Html.DisplayFor(modelItem => item.HR_Emp_Info.Cat_Designation.DesigName)
                            </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.dtNotice)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.dtEvent)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NoticeType)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.ViolenceDesc)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Decision)
                            </td>

                            <td>

                                <span data-toggle="tooltip" title="Edit!">
                                    @Html.ActionLink(" ", "EditEmployeeBehaviour", new { id = item.BehaveId }, new { @class = "fas fa-edit btn btn-warning btn-xs", @target = "_blank" })
                                </span>
                                <span data-toggle="tooltip" title="Delete!">
                                    @Html.ActionLink(" ", "DeleteEmployeeBehaviour", new { Id = item.BehaveId }, new { @class = "far fa-trash-alt btn btn-danger btn-xs" })
                                </span>


                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </form>
</div>




