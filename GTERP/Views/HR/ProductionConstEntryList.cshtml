@model IEnumerable<GTERP.Models.ProductionCostEntry>
@{
    ViewData["Title"] = "BOFuploaderList";
}


<div class="card-header">
    Production Cost Entry
</div>
<div class="text-center">
    <div class="row mb-2">
        <div class="col-md-2 col-2">
            @Html.ActionLink("Create New", "ProductionConstEntry", null, null, new { @class = "btn btn-outline-info btn-block rounded-0", @id = "btnBack" })
        </div>
    </div>
</div>

<div class="card p-2">
    <table id="costEntryTable" class="table table-hover table-bordered tbllist  table-hover" cellspacing="0" width="100%">
        <thead>
                    <tr>
                        <th>Serial No.</th>
                        @* <th>Employee Code</th> *@
                        <th>Create Date</th>
                        <th>Bundle</th>
                        <th>Box Packet Reel</th>
                        <th>Bag</th>
                        <th>Drum</th>
                        
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        @foreach (var entry in Model.OrderBy(e => e.Id))
                        {
                                    <tr>
                                        <td>@(Model.ToList().IndexOf(entry) + 1)</td>
                                @* <td>@entry.EmpCode</td> *@
                                 <td>@entry.CreateDate?.ToString("dd-MMM-yyyy")</td>

                                        <td>@entry.Boundle</td>
                                        <td>@entry.BoxPacketReel</td>
                                        <td>@entry.Bags</td>
                                        <td>@entry.Drum</td>
                                        <td class="text-nowrap">
                                            <span data-toggle="tooltip" title="Edit!">
                                                @Html.ActionLink(" ", "ProductionConstEntryDetails", new { id = entry.Id }, new { @class = "fas fa-edit btn btn-warning btn-xs", @target = "_blank" })
                                            </span>
                                            <span data-toggle="tooltip" title="Delete!">
                                                @Html.ActionLink(" ", "ProductionConstEntryDelete", new { id = entry.Id }, new { @class = "far fa-trash-alt btn btn-danger btn-xs" })
                                            </span>
                                        </td>                             
                                    </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
  

