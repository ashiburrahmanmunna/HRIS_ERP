<style>
    #styletext {
        color: transparent;
        background: #666666;
        -webkit-background-clip: text;
        -moz-background-clip: text;
        background-clip: text;
        text-shadow: 0px 3px 3px rgba(255,255,255,0.5);
        font-weight: 100;
        font-size: 40px;
    }
</style>

@using (Html.BeginForm("Raw_DataTransfer", "HR", FormMethod.Post))
{
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2 col-12">
                <div id="modalbodyfahad" class="card">
                    <div>
                        <div class="card-header">
                            <h4 id="styletext">@ViewBag.Title</h4>
                        </div>
                        <div class="card-body">
                            <div class="container">
                                <div class="row">
                                    <div class="col-md-12 col-12">
                                        <div class="input-group mb-2">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text py-0">
                                                    FromDate
                                                </span>
                                            </div>
                                            <input type="text" id="FromDate" name="From" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="col-md-12 col-12">
                                        <div class="input-group mb-2">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text py-0">
                                                    ToDate
                                                </span>
                                            </div>
                                            <input type="text" id="ToDate" name="to" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="row text-center m-2">
                                <br />
                                <div class="col-md-2"></div>
                                <div class="col-md-4 col-xs-12 d-block mx-auto">
                                    <button type="button" id="transferBtn" class="btn btn-primary btn-md btn-block rounded-0">Transfer</button>
                                </div>
                                <div class="col-md-2"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- Modal -->
<div class="modal fade" id="confirmationModal" tabindex="-1" role="dialog" aria-labelledby="confirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmationModalLabel">Confirmation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p id="modalMessage"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                <button type="button" class="btn btn-primary" id="confirmTransferBtn">Yes</button>
            </div>
        </div>
    </div>
</div>



@section Scripts{
    <script>
        $(function () {
            $("#FromDate").datepicker({
                dateFormat: 'dd-M-yy'
            });
            $("#ToDate").datepicker({
                dateFormat: 'dd-M-yy'
            });
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.4.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(function () {
            // Show confirmation modal when the Transfer button is clicked
            $("#transferBtn").click(function () {
                var fromDate = $("#FromDate").val();
                var toDate = $("#ToDate").val();
                var modalMessage = "Are You confirm to transfer the date from " + fromDate + " to " + toDate + "?";
                $("#modalMessage").text(modalMessage);
                $("#confirmationModal").modal("show");
            });

            // Perform the action when the Yes button in the modal is clicked
            $("#confirmTransferBtn").click(function () {
                // Submit the form
                $("form").submit();
            });
        });
    </script>
}
