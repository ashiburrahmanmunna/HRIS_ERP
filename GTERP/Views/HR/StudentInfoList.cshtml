@model IEnumerable<GTERP.ViewModels.VendorInfoVM>
<style>
    .tbllist th:first-child, .tbllist tbody td:first-child {
        position: sticky !important;
        left: 0px;
        background-color: #f2f2f2e6;
        z-index: 1;
    }

    .tbllist tfoot td:first-child {
        position: sticky !important;
        left: 0px;
        background-color: #f2f2f2e6;
        z-index: 1;
    }


    .tbllist th:last-child, .tbllist tbody td:last-child {
        position: sticky !important;
        right: 0px;
        background-color: #f2f2f2e6;
        z-index: 1;
    }

    .tbllist tfoot td:last-child {
        position: sticky !important;
        right: 0px;
        background-color: #f2f2f2e6;
        z-index: 1;
    }
</style>
<div class="container-fluid">

    <div class="text-center">
        <div class="row mb-2">
            <div class="col-md-3 col-12">
                @Html.ActionLink("Student Creation", "CreateStudentInfo", null, null, new { @class = "btn btn-outline-info btn-block rounded-0", @id = "btnBack" })
            </div>
            <div class="col-md-9 col-12">
                <h2 id="styletext">Student List</h2>
            </div>
        </div>
    </div>

    <form class="card p-2">
        <div class="table-responsive text-nowrap">
            <table id="tbllist" class="table table-hover table-bordered tbllist  table-hover" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <td>Student ID</td>
                        <td>Student Name</td>
                        @* <td>Vendor Name</td>
                        <td>Vendor Type</td>*@
                        <td>Class</td>
                        <td>Role/Job Nature</td>
                        @*<td>Designation</td>
                        <td>AltitudeData</td>*@
                        <td>Classification</td>
                        <td>Type</td>
                        <td>District</td>
                        <td>Present Address</td>
                        <td>Permanent Address</td>
                        <td>Father's Name</td>
                        <td>Mother's Name</td>
                        <td>Roll No</td>
                        <td>Marital Status</td>
                        <td>Spouse Name</td>
                        <td>Gender</td>
                        <td>DOB</td>
                        <td>Age</td>
                        <td>Service period</td>
                        <td>Nid</td>
                        <td>RFID</td>
                        <td>DOJ</td>
                        <td>Cell Number</td>
                        <td>Emergency Contract</td>
                        <td>Religion</td>
                        <td>Blood Group</td>
                        <td>Employee Status</td>
                        <td>Vaccinated</td>
                        @*<td>Rate</td>*@
                        <td>  </td>


                    </tr>
                </thead>
                <tbody>
                    @foreach (var e in Model)
                    {
                        if (e.IsApprove == false)
                        {
                            <tr style="background-color:rgb(249 207 181)">
                                <td>@e.EmpCode</td>
                                <td>@e.EmpName</td>
                                @* <td>@e.UnitName</td>
                        <td>@e.VendorType</td>*@
                                <td>@e.DeptName</td>
                                @*<td>@e.DesigName</td>*@
                                <td>@e.JobNatureType</td>
                                @*<td>@e.AltitudeData</td>*@
                                <td>@e.SectName</td>
                                <td>@e.EmpTypeName</td>
                                <td>@e.DisName</td>
                                <td>@e.PresentAddress</td>
                                <td>@e.PermanentAddress</td>
                                <td>@e.EmpFather</td>
                                <td>@e.EmpMother</td>
                                <td>@e.TINNo</td>

                                @if (e.MaritalStatus == false)
                                {
                                    <td>Single</td>
                                }
                                else
                                {
                                    <td>Married</td>

                                }
                                <td>@e.EmpSpouse</td>
                                <td>@e.GenderName</td>
                                <td>@e.DtBirth.Date</td>
                                <td>@e.Age</td>
                                <td>@e.ServiceLentgh</td>
                                <td>@e.NID</td>
                                <td>@e.FingerId</td>
                                <td>@e.DtJoin.ToString("dd-MMM-yyyy")</td>
                                <td>@e.EmpPhone1</td>
                                <td>@e.EmpPhone2</td>
                                <td>@e.ReligionName</td>
                                <td>@e.BloodName</td>
                                @if (e.IsInactive == false)
                                {
                                    <td>Active</td>
                                }
                                else
                                {
                                    <td>Inactive</td>

                                }

                                <td>@e.Vaccinated</td>
                                @*<td>@e.rate</td>*@

                                <td class="text-nowrap">
                                    <span data-toggle="tooltip" title="Edit!">
                                        @Html.ActionLink(" ", "EditStudentInfo", new { id = e.EmpId }, new { @class = "fas fa-edit btn btn-warning btn-xs", @target = "_blank" })
                                    </span>
                                    <span data-toggle="tooltip" title="Delete!">
                                        @Html.ActionLink(" ", "DeleteStudentInfo", new { id = e.EmpId }, new { @class = "far fa-trash-alt btn btn-danger btn-xs" })
                                    </span>


                                </td>
                            </tr>
                        }
                        else
                        {
                            <tr>
                                <td>@e.EmpCode</td>
                                <td>@e.EmpName</td>
                                @*<td>@e.UnitName</td>
                        <td>@e.VendorType</td>*@
                                <td>@e.DeptName</td>
                                @*<td>@e.DesigName</td>*@
                                <td>@e.JobNatureType</td>
                                @*<td>@e.AltitudeData</td>*@
                                <td>@e.SectName</td>
                                <td>@e.EmpTypeName</td>
                                <td>@e.DisName</td>
                                <td>@e.PresentAddress</td>
                                <td>@e.PermanentAddress</td>
                                <td>@e.EmpFather</td>
                                <td>@e.EmpMother</td>
                                <td>@e.TINNo</td>
                                @if (e.MaritalStatus == false)
                                {
                                    <td>Single</td>
                                }
                                else
                                {
                                    <td>Married</td>

                                }
                                <td>@e.EmpSpouse</td>
                                <td>@e.GenderName</td>
                                <td>@e.DtBirth.ToString("dd-MMM-yyyy")</td>
                                <td>@e.Age</td>
                                <td>@e.ServiceLentgh</td>
                                <td>@e.NID</td>
                                <td>@e.FingerId</td>
                                <td>@e.DtJoin.ToString("dd-MMM-yyyy")</td>
                                <td>@e.EmpPhone1</td>
                                <td>@e.EmpPhone2</td>
                                <td>@e.ReligionName</td>
                                <td>@e.BloodName</td>
                                @if (e.IsInactive == false)
                                {
                                    <td>Active</td>
                                }
                                else
                                {
                                    <td>Inactive</td>

                                }
                                <td>@e.Vaccinated</td>
                                @*<td>@e.rate</td>*@

                                <td class="text-nowrap">
                                    <span data-toggle="tooltip" title="Edit!">
                                        @Html.ActionLink(" ", "EditStudentInfo", new { id = e.EmpId }, new { @class = "fas fa-edit btn btn-warning btn-xs", @target = "_blank" })
                                    </span>
                                    <span data-toggle="tooltip" title="Delete!">
                                        @Html.ActionLink(" ", "DeleteStudentInfo", new { id = e.EmpId }, new { @class = "far fa-trash-alt btn btn-danger btn-xs" })
                                    </span>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        <br />
    </form>
</div>


