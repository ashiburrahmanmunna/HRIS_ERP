
@model IEnumerable<GTERP.ViewModels.VendorInfoVM>
<style>
    .tbllist th:first-child, .tbllist tbody td:first-child {
        position: sticky !important;
        left: 0px;
        background-color: #f2f2f2e6;
        z-index: 1;
    }

    .tbllist tfoot td:first-child {
        position: sticky !important;
        left: 0px;
        background-color: #f2f2f2e6;
        z-index: 1;
    }


    .tbllist th:last-child, .tbllist tbody td:last-child {
        position: sticky !important;
        right: 0px;
        background-color: #f2f2f2e6;
        z-index: 1;
    }

    .tbllist tfoot td:last-child {
        position: sticky !important;
        right: 0px;
        background-color: #f2f2f2e6;
        z-index: 1;
    }
</style>
<div class="container-fluid">

    <div class="text-center">
        <div class="row mb-2">
            <div class="col-md-2 col-2">
                @Html.ActionLink("Vendor Creation", "CreateVendorInfo", null, null, new { @class = "btn btn-outline-info btn-block rounded-0", @id = "btnBack" })
            </div>
           
                @*Upload Excel File Start*@
                <div class="col-md-8 col-8">
                <form method="post" enctype="multipart/form-data" asp-action="RateUploadFileUBL">                       
                    <div class="input-group input-group w-50" style="margin:0 auto;">
                        <span class="input-group-btn input-group-prepend">
                            <span class="btn btn-info rounded-0" onclick="$(this).parent().find('input[type=file]').click();">Browse</span>
                            <input name="file" onchange="$(this).parent().parent().find('.form-control').html($(this).val().split(/[\\|/]/).pop());" style="display: none;" type="file" id="FileUpload1">
                        </span>
                        <span class="form-control border border-info" style="background: #f2f2f2e6;"></span>
                        <button class="rounded-0 btn btn-info btn-sm" type="submit" id="btnUpload">Upload</button>
                        <div style="padding-left:5px;">
                            <a href="~/HR/DownloadShiftFile?file=Vendor_uploads.xlsx" title="Download Sample Format"
                               class="btn btn-success rounded-0" target="_blank"><i class="mdi mdi-file-excel"></i>Vendor Info Sample</a>
                            
                        </div>
                    </div>
                    </form>
                    <span>
                        <div style="padding-bottom:10px"></div>
                    </span>
                <form method="post" enctype="multipart/form-data" asp-action="BankDataUpload">
                    <div class="input-group input-group w-50" style="margin:0 auto;">
                        <span class="input-group-btn input-group-prepend">
                            <span class="btn btn-info rounded-0" onclick="$(this).parent().find('input[type=file]').click();">Browse</span>
                            <input name="file" onchange="$(this).parent().parent().find('.form-control').html($(this).val().split(/[\\|/]/).pop());" style="display: none;" type="file" id="FileUpload1">
                        </span>
                        <span class="form-control border border-info" style="background: #f2f2f2e6;"></span>
                        <button class="rounded-0 btn btn-info btn-sm" type="submit" id="btnUpload">Upload</button>
                        <div style="padding-left:5px;">
                            <a href="~/HR/DownloadShiftFile?file=Bank_Info_Excel.xlsx" title="Download Bank Info Sample"
                               class="btn btn-success rounded-0" target="_blank"><i class="mdi mdi-file-excel"></i>  Bank Info Sample</a>
                           
                        </div>
                    </div>
                
                </form> 
                </div>
                @*Upload Excel File End*@
            
                
                <div class="col-md-2 col-2">
                
            </div>
        </div>
    </div>


    
           

    <form class="card p-2">
        <div class="table-responsive text-nowrap">
        <table id="tbllist" class="table table-hover table-bordered tbllist  table-hover" cellspacing="0" width="100%">
            <thead>
                <tr>
                            <td>EmpCode</td>
                            <td>EmpName</td>
                            <td>Vendor Name</td>
                            <td>Vendor Type</td>
                            <td>Deptartment</td>
                            <td>Role/Job Nature</td>
                            <td>Designation</td>                           
                            <td>AltitudeData</td>
                            <td>Classification</td>
                            <td>Type</td>
                            <td>District</td>
                            <td>Present Address</td>
                            <td>Permanent Address</td>
                            <td>Father's Name</td>
                            <td>Mother's Name</td>
                            <td>Marital Status</td>
                            <td>Spouse Name</td>
                            <td>Gender</td>
                            <td>DOB</td>
                            <td>Age</td>
                            <td>Service period</td>
                            <td>Nid</td>
                            <td>RFID</td>
                            <td>DOJ</td>
                            <td>Cell Number</td>
                            <td>Emergency Contract</td>
                            <td>Religion</td>
                            <td>Blood Group</td>
                            <td>Employee Status</td>
                            <td>Vaccinated</td>
                            <td>Rate</td>
                            <td>Offday</td>
