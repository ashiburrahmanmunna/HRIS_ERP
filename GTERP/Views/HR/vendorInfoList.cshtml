                                <td>@e.GenderName</td>
                                <td>@e.DtBirth.Date</td>
                                <td>@e.Age</td>
                                <td>@e.ServiceLentgh</td>
                                <td>@e.NID</td>
                                <td>@e.FingerId</td>
                                <td>@e.DtJoin.ToString("dd-MMM-yyyy")</td>
                                <td>@e.EmpPhone1</td>
                                <td>@e.EmpPhone2</td>
                                <td>@e.ReligionName</td>
                                <td>@e.BloodName</td>
