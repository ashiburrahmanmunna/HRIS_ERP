                                {
                                    <td>Active</td>
                                }
                                else
                                {
                                  <td>Inactive</td>  

                                }

                                 <td>@e.Vaccinated</td>
                                 <td>@e.rate</td>
                                <td>@e.Offday</td>
                                <!-- New data cells -->
                                <td>@e.GrossSalary</td>
                                <td>@e.Skill</td>
                                <td>@e.Relay</td>
                                <td>@e.SecondWeekDay</td>
                                <td>@e.Category</td>
                               @*  <td>@e.FatherName</td>
                                <td>@e.MotherName</td> *@
                                <td>@e.BankName</td>
                                <td>@e.BranchName</td>
                                <td>@e.RoutingNumber</td>
                                <td>@e.AccountNumber</td>
                                <td>@e.AccountName</td>
                                <td>@e.AccountType</td>
                                <td class="text-nowrap">
                                    <span data-toggle="tooltip" title="Edit!">
                                        @Html.ActionLink(" ", "EditVendorInfo", new { id = e.EmpId }, new { @class = "fas fa-edit btn btn-warning btn-xs", @target = "_blank" })
                                    </span>
                                    <span data-toggle="tooltip" title="Delete!">
                                        @Html.ActionLink(" ", "DeleteVendorInfo", new { id = e.EmpId }, new { @class = "far fa-trash-alt btn btn-danger btn-xs" })
                                    </span>


                                </td>
                                <td>ke</td>
                                <td>1</td>
                                <td>3</td>
                            </tr>
                        }
                        else
                        {
                            <tr>
                                  <td>@e.EmpCode</td>
                                <td>@e.EmpName</td>
                                <td>@e.UnitName</td>
                                <td>@e.VendorType</td>
                                <td>@e.DeptName</td>
                                <td>@e.DesigName</td>
                                <td>@e.JobNatureType</td>
                                <td>@e.AltitudeData</td>
                                <td>@e.SectName</td>
                                <td>@e.EmpTypeName</td>
                                <td>@e.DisName</td>
                                <td>@e.PresentAddress</td>
                                <td>@e.PermanentAddress</td>
                                <td>@e.EmpFather</td>
                                <td>@e.EmpMother</td>
                                @if (e.MaritalStatus == false)
                                {
                                    <td>Single</td>
                                }
                                else
                                {
                                  <td>Married</td>  

                                }
                                <td>@e.EmpSpouse</td>
                                <td>@e.GenderName</td>
                                <td>@e.DtBirth.ToString("dd-MMM-yyyy")</td>
                                <td>@e.Age</td>
                                <td>@e.ServiceLentgh</td>
                                <td>@e.NID</td>
                                <td>@e.FingerId</td>
                                <td>@e.DtJoin.ToString("dd-MMM-yyyy")</td>
                                <td>@e.EmpPhone1</td>
                                <td>@e.EmpPhone2</td>
                                <td>@e.ReligionName</td>
                                <td>@e.BloodName</td>
                                   @if (e.IsInactive == false)
                                {
                                    <td>Active</td>
                                }
                                else
                                {
                                  <td>Inactive</td>  

                                }
                                  <td>@e.Vaccinated</td>
                                  <td>@e.rate</td>
                                  <td>@e.Offday</td>
                                <!-- New data cells -->
                                <td>@e.GrossSalary</td>
                                <td>@e.Skill</td>
                                <td>@e.Relay</td>
                                <td>@e.SecondWeekDay</td>
                                <td>@e.Category</td>
                                @* <td>@e.FatherName</td>
                                <td>@e.MotherName</td> *@
                                <td>@e.BankName</td>
                                <td>@e.BranchName</td>
                                <td>@e.RoutingNumber</td>
                                <td>@e.AccountNumber</td>
                                <td>@e.AccountName</td>
                                <td>@e.AccountType</td>
                                <td class="text-nowrap">
                                    <span data-toggle="tooltip" title="Edit!">
                                        @Html.ActionLink(" ", "EditVendorInfo", new { id = e.EmpId }, new { @class = "fas fa-edit btn btn-warning btn-xs", @target = "_blank" })
                                    </span>
                                    <span data-toggle="tooltip" title="Delete!">
                                        @Html.ActionLink(" ", "DeleteVendorInfo", new { id = e.EmpId }, new { @class = "far fa-trash-alt btn btn-danger btn-xs" })
                                    </span>
                                </td>
                               
                            </tr>
                        }
                    }
            </tbody>
        </table>
        </div>
        <br />
    </form>
</div>


