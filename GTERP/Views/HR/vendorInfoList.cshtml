                        <td>Gross Salary</td>
                        <td>Skill</td>
                        <td>Relay</td>
                        <td>2nd WeekDay</td>
                        <td>Category</td>
                        @* <td>Father's Name</td>
                        <td>Mother's Name</td> *@
                        <td>Bank Name</td>
                        <td>Branch Name</td>
                        <td>Routing Number</td>
                        <td>Account Number</td>
                        <td>Account Name</td>
                        <td>Account Type</td>
                            <td>  </td>
                       
                            
                 </tr>
            </thead>
            <tbody>
                @foreach (var e in Model)
                {
                        if (e.IsApprove == false)
                        {
                            <tr style="background-color:rgb(249 207 181)">
                                <td>@e.EmpCode</td>
                                <td>@e.EmpName</td>
                                <td>@e.UnitName</td>
                                <td>@e.VendorType</td>
                                <td>@e.DeptName</td>
                                <td>@e.DesigName</td>
                                <td>@e.JobNatureType</td>                              
                                <td>@e.AltitudeData</td>
                                <td>@e.SectName</td>
                                <td>@e.EmpTypeName</td>
                                <td>@e.DisName</td>
                                <td>@e.PresentAddress</td>
                                <td>@e.PermanentAddress</td>
                                <td>@e.EmpFather</td>
                                <td>@e.EmpMother</td>                               
                                   @if (e.MaritalStatus == false)
                                {
                                    <td>Single</td>
                                }
