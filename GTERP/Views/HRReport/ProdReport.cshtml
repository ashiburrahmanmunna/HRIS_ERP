                let a = new Date(fDate.getFullYear(), fDate.getMonth() + 1, 1)
                let b = new Date(lDate.getFullYear(), lDate.getMonth() + 2, 0)
                $("#FromDate").val(CurrentDate(a));
                $("#ToDate").val(CurrentDate(b));

                //alert($("#DtTo").val());
            })
