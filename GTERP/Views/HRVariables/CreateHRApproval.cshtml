@model GTERP.Models.HR_ApprovalSetting


<style>


    #styletext {
        color: transparent;
        background: #666666;
        -webkit-background-clip: text;
        -moz-background-clip: text;
        background-clip: text;
        text-shadow: 0px 3px 3px rgba(255,255,255,0.5);
        font-weight: 100;
        font-size: 40px;
    }
</style>
@if (ViewBag.info != "" || null)
{
    <div class="row justify-content-md-center">
 <p class="bg bg-success text-center w-25 text-white" >@ViewBag.info</p>   
</div>
}
@using (Html.BeginForm("CreateHRApproval", "HRVariables", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @*@Html.AntiForgeryToken()*@

    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-6 col-12" style="margin-top:50px;">
                @if (Model != null)
                {
                    <input type="hidden" id="ApprovalSettingId" name="ApprovalSettingId" value="@Model.ApprovalSettingId" />
                }
                else
                {
                    <input type="hidden" asp-for="ApprovalSettingId" value="0" />
                }
                <div id="modalbodyfahad" class="card">
                    <div>
                        <div class="card-header">
                            <h4 id="styletext">HR Approval Setting Entry - @ViewBag.Title</h4>
                        </div>

                        <div class="card-body">
                            <form class="needs-validation" novalidate>

                                <div class="container">
                                    <div class="row">
                                        <div class="col-md-12 col-12">
                                            <div class="input-group mb-2">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text py-0">
                                                        Company Name
                                                    </span>
                                                </div>
                                                <select asp-for="ComId" asp-items="ViewBag.CompanyName">
                                                    <option selected value="">--Please Select One--</option>
                                                </select>
                                                @Html.ValidationMessageFor(model => model.ComId, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                    </div>

                                    <div class="row">
                                        <div class="col-md-12 col-12">
                                            <div class="input-group mb-2">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text py-0">
                                                        Approval Type
                                                    </span>
                                                </div>
                                                <select asp-for="ApprovalType" asp-items="ViewBag.ApprovalList">
                                                    <option selected value="">--Please Select One--</option>
                                                </select>
                                                @Html.ValidationMessageFor(model => model.ApprovalType, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                    </div>
                                    <div class="row">
                                        <div class="col-md-12 col-12">
                                            <div class="input-group mb-2">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text py-0">
                                                        Approved By
                                                    </span>
                                                </div>
                                                <select asp-for="UserId" asp-items="ViewBag.useridPermission" class="form-control">
                                                </select>
                                                @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                    </div>
                                    <div class="row" id="divToHide" style="display:none">
                                        <div class="col-md-12 col-12">
                                            <div class="input-group mb-2">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text py-1"> First Leave Approve</span>
                                                </div>
                                                <div class="input-group-append">
                                                    <span class="input-group-text py-1">
                                                        @Html.CheckBoxFor(model => model.IsFirstLeaveApprove, new { htmlAttributes = new { @class = "form-control" } })
                                                        @Html.ValidationMessageFor(model => model.IsFirstLeaveApprove, "", new { @class = "text-danger" })
                                                    </span>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12 col-12">
                                            <div class="input-group mb-2">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text py-1"> Is Approve </span>
                                                </div>
                                                <div class="input-group-append">
                                                    <span class="input-group-text py-1">
                                                        @Html.CheckBoxFor(model => model.IsApprove, new { htmlAttributes = new { @class = "form-control" } })
                                                        @Html.ValidationMessageFor(model => model.IsApprove, "", new { @class = "text-danger" })
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="row text-center m-2">
                            <br />
                            <div class="col-md-2"></div>
                            <div class="col-md-4 col-xs-12 d-block mx-auto">

                                @if (ViewBag.Title == "Create")
                                {
                                    <input type="submit" value="Save" class="btn btn-primary btn-block rounded-0" />

                                    @*<button class="btn btn-primary btn-lg btn-block" type="button" onclick="Products_save()">Save</button>*@
                                }
                                else if (ViewBag.Title == "Edit")
                                {
                                    <input type="submit" value="Update" class="btn btn-warning btn-block rounded-0" />

                                    @*<button class="btn btn-warning btn-lg btn-block" type="button" onclick="Products_save()">Update</button>*@
                                }
                                else if (ViewBag.Title == "Delete")
                                {
                                    <button class="btn btn-danger btn-block rounded-0" type="button" onclick="Approval_delete()">Delete</button>
                                }


                            </div>
                            <div class="col-md-4 col-xs-12 d-block mx-auto">
                                @Html.ActionLink("Back", "HRApprovalSettingList", "HRVariables", null, new { @class = "btn btn-info btn-block rounded-0", @id = "btnBack" })

                            </div>
                            <div class="col-md-2"></div>

                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

}

@section Scripts{
    <script>
        $(document).ready(function () {
            // $("#ApprovalSettingId").select2();
            var selectedValue = $("#ApprovalType option:selected").val();
            if ("@ViewBag.Title" == "Edit" && selectedValue == "1175") {
                $("#divToHide").show();
             }
        })
        $(document).on("change", "#ApprovalType", function (e) {
            var selectedVal = $(this).val();
            if (selectedVal == "1175"){
                $("#divToHide").show();
            }
            else{

                 $("#divToHide").hide();
            }


                            });


        function Approval_delete() {

            var ApprovalId = $("#FloorId").val();
            //alert(SalesId);
            $.ajax({

                url: '@Url.Action("DeleteHRApproval", "HRVariables")',
                data: JSON.stringify({ id: ApprovalId }), //use id here
                //data: JSON.stringify(salesmain),
                type: 'POST',
                contentType: 'application/json;',
                dataType: 'json',
                success: function (result) {
                    if (result.Success == "1") {
                        customFile('3', result.ex);
                        window.setTimeout(function () {
                            // Move to a new location or you can do something else
                            window.location.href = '@Url.Action("HRApprovalSettingList", "HRVariables")';
                        }, 500);
                    }
                    else {
                        toastr.error(result.ex);
                    }
                }
            });
        }
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
