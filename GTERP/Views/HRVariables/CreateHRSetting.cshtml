                                            </div>
                                        </div>

                                        <div class="row col-6 mx-0 px-0">
                                            <div class="col-md-6 col-12">
                                                <div class="input-group">
                                                    <div class="input-group-prepend">
                                                        <span class="input-group-text py-0"> @Html.LabelFor(model => model.IsFADifference)</span>
                                                    </div>
                                                    <div class="input-group-append">
                                                        <span class="input-group-text py-0">
                                                            @Html.CheckBoxFor(model => model.IsFADifference, new { htmlAttributes = new { @class = "form-control" } })
                                                            @Html.ValidationMessageFor(model => model.IsFADifference, "", new { @class = "text-danger" })
                                                        </span>
                                                    </div>

                                                </div>
                                            </div>
                                            <div class="col-md-6 col-12">
                                                <div class="input-group">
                                                    <div class="input-group-prepend">
                                                        <span class="input-group-text py-1"> Is FA Percentage</span>
                                                    </div>
                                                    <div class="input-group-append">
                                                        <span class="input-group-text py-1">
                                                            @Html.CheckBoxFor(model => model.IsFAPersentage, new { htmlAttributes = new { @class = "form-control" } })
                                                            @Html.ValidationMessageFor(model => model.IsFAPersentage, "", new { @class = "text-danger" })
                                                        </span>
                                                    </div>

                                                </div>
                                            </div>

                                        </div>

                                        
