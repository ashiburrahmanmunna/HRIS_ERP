                                                        <span class="input-group-text py-0"> Is Late Deduction</span>
                                                    </div>
                                                    <div class="input-group-append">
                                                        <span class="input-group-text py-0">
                                                            @Html.EditorFor(model => model.IsLateDedcution, new { htmlAttributes = new { @class = "form-control", @id = "myCheck", @onclick = "addbox()" } })
                                                            @Html.ValidationMessageFor(model => model.IsLateDedcution, "", new { @class = "text-danger" })
                                                        </span>
                                                    </div>

                                                </div>
                                            </div>


                                            <div class="col-md-5 col-12" id="area1" style="display:none;">
                                                <div class="input-group mb-2 ">
                                                    <div class="input-group-prepend">
                                                        <span class="input-group-text py-0">
                                                            Deduction Type
                                                        </span>
                                                    </div>
                                                    <select asp-for="DeductionType" class="form-control">
                                                        <option value="Gross">Gross</option>
                                                        <option value="Basic">Basic</option>
                                                        <option value="Minute">Minute</option>
                                                    </select>

                                                    @Html.ValidationMessageFor(model => model.DeductionType, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                
                            </form>
                        </div>
                        <div class="card-footer">
                            <div class="row text-center m-2">
                                <br />
                                <div class="col-md-2"></div>
                                <div class="col-md-4 col-xs-12 d-block mx-auto">

                                    @if (ViewBag.Title == "Create")
                                    {
                                        <input type="submit" id="save" value="Save" class="btn btn-primary btn-md btn-block rounded-0" />
                                    }
                                    else if (ViewBag.Title == "Edit")
                                    {
                                        <input type="submit" value="Update" class="btn btn-warning btn-block rounded-0" />
                                    }
                                    else if (ViewBag.Title == "Delete")
                                    {
                                        <button class="btn btn-danger btn-md btn-block rounded-0" type="button" onclick="HRSetting_delete()">Delete</button>
                                    }
                                </div>
                                <div class="col-md-4 col-xs-12 d-block mx-auto">
                                    @Html.ActionLink("Back", "HRSettingList", "HRVariables", null, new { @class = "btn btn-info btn-block rounded-0", @id = "btnBack" })

                                </div>
                                <div class="col-md-2"></div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>

        
    </div>

}

@section Scripts{
    <script>

    $("#EmpTypeId").select2();
    $("#LId").select2();
    $("#BId").select2();

        // for is late deduction show and hide

        function addbox() {
            if (document.getElementById('myCheck').checked) {
                document.getElementById('area1').style.display = 'block';

            } else {
                document.getElementById('area1').style.display = 'none';

            }
        }


    function HRSetting_delete() {

        var id = $("#Id").val();
         //   alert(Sectid);
            $.ajax({

                url: '@Url.Action("DeleteHRSetting", "HRVariables")',

                data: JSON.stringify({ id: id }), //use id here
                //data: JSON.stringify(salesmain),
                type: 'POST',
                contentType: 'application/json;',
                dataType: 'json',
                success: function (result) {
                    debugger;
                if (result.Success == "1") {
                    customFile('3', result.ex);
                    window.setTimeout(function () {
                        // Move to a new location or you can do something else
                        window.location.href = '@Url.Action("HRSettingList", "HRVariables")';
                    }, 500);
                }
                else {
                    toastr.error(result.ex);
                }
            }
            });
        }

        $(document).ready(function () {
            addbox();
            $('input[type="checkbox"]').click(function () {
                if ($(this).prop("checked") == true) {
                    console.log("Checkbox is checked.");
                }
                else if ($(this).prop("checked") == false) {
                    console.log("Checkbox is unchecked.");
                }
            });
        })
        
    </script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

