                                                        <span class="input-group-text py-1"> Is CA Percentage</span>
                                                    </div>
                                                    <div class="input-group-append">
                                                        <span class="input-group-text py-1">
                                                            @Html.CheckBoxFor(model => model.IsCAPersentage, new { htmlAttributes = new { @class = "form-control" } })
                                                            @Html.ValidationMessageFor(model => model.IsCAPersentage, "", new { @class = "text-danger" })
                                                        </span>
                                                    </div>

