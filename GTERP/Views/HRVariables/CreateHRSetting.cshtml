                                            </div>
                                        </div>

                                        <div class="col-md-8 col-12">
                                            <div class="input-group mb-2">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text py-0">
                                                        <label asp-for="MA"></label>
                                                    </span>
                                                </div>
                                                <input asp-for="MA" class="form-control" />
                                                <span asp-validation-for="MA" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="col-md-4 col-12">
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text py-1"> Is MA Percentage</span>
                                                </div>
                                                <div class="input-group-append">
                                                    <span class="input-group-text py-1">
                                                        @Html.CheckBoxFor(model => model.IsMAPersentage, new { htmlAttributes = new { @class = "form-control" } })
                                                        @Html.ValidationMessageFor(model => model.IsMAPersentage, "", new { @class = "text-danger" })
                                                    </span>
                                                </div>

                                            </div>
                                        </div>

                                        <div class="col-md-5 col-12">
                                            <div class="input-group mb-2">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text py-0">
                                                        <label asp-for="CA"></label>
                                                    </span>
                                                </div>
                                                <input asp-for="CA" class="form-control" />
