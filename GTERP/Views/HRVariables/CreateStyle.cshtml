@model GTERP.Models.Cat_Style

<style>

    #styletext {
        color: transparent;
        background: #666666;
        -webkit-background-clip: text;
        -moz-background-clip: text;
        background-clip: text;
        text-shadow: 0px 3px 3px rgba(255,255,255,0.5);
        font-weight: 100;
        font-size: 40px;
    }
</style>

@using (Html.BeginForm("CreateStyle", "HRVariables", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @*@Html.AntiForgeryToken()*@

    <div class="container">
        <div class="row">
            <div class="col-md-6  offset-md-3 col-12">
                @if (Model != null)
                {
                <input type="hidden" id="StyleId" name="StyleId" value="@Model.StyleId" />
                }
                else
                {
                <input type="hidden" asp-for="StyleId" value="0" />
                }
                <div id="modalbodyfahad" class="card">
                    <div>
                        <div class="card-header">
                            <h4 id="styletext">Style Entry - @ViewBag.Title</h4>
                        </div>
                        <div class="card-body">
                            <form class="needs-validation" novalidate>

                                <input type="hidden" asp-for="ComId" />
                                <input type="hidden" asp-for="UserId" />

                                <div class="container">
                                    <div class="row">
                                        <div class="col-md-12 col-12">
                                            <div class="input-group mb-2">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text py-0">
                                                        Style Date
                                                    </span>
                                                </div>
                                                @if (ViewBag.Title == "Create")
                                                {
                                                    <input type="text" value="@DateTime.Now.ToString("dd-MMM-yyyy")" asp-for="StyleDate" name="StyleDate" class="form-control" autocomplete="off" />
                                                }
                                                else
                                                {
                                                    <input type="text" value="@Model.StyleDate.ToString("dd-MMM-yyyy")" asp-for="StyleDate" name="StyleDate" class="form-control" autocomplete="off" />
                                                }

                                            </div>
                                        </div>
                                        <div class="col-md-12 col-12">
                                            <div class="input-group mb-2">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text py-0">
                                                        @Html.LabelFor(model => model.StyleName)
                                                    </span>
                                                </div>
                                                @Html.EditorFor(model => model.StyleName, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.StyleName, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="col-md-12 col-12">
                                            <div class="input-group mb-2">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text py-0">
                                                        Buyer Name
                                                    </span>
                                                </div>
                                                @Html.EditorFor(model => model.StyleNameB, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.StyleNameB, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="col-md-4 col-12 mb-3 ml-3">
                                            <div class="row d-flex justify-content-md-start">
                                                <div></div>
                                                <div class="col-md-8 border" style="background-color:rgb(234 232 232);padding:7px 0; border-radius:3px;">

                                                    <span class="font-weight-bold mx-2">Is Fixed</span>
                                                    <input asp-for="IsFixedRate" type="checkbox" onclick="toggle()" style="cursor:pointer" />
                                                </div>
                                            </div>
                                        </div>

                                        
                                        <div class="col-md-7 col-12">
                                            <div class="input-group mb-2">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text py-0">
                                                        Rate
                                                    </span>
                                                </div>
                                                @Html.EditorFor(model => model.Rate, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.Rate, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="col-md-12 col-12">
                                            <div class="input-group mb-2">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text py-0">
                                                        @Html.LabelFor(model => model.Color)
                                                    </span>
                                                </div>
                                                <select asp-for="Color" asp-items="ViewBag.Color">
                                                    <option selected value="=N/A=">=N/A=</option>
                                                </select>
                                                @*@Html.EditorFor(model => model.Color, new { htmlAttributes = new { @class = "form-control" } })*@
                                                @Html.ValidationMessageFor(model => model.Color, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="col-md-12 col-12">
                                            <div class="input-group mb-2">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text py-0">
                                                        @Html.LabelFor(model => model.Size)
                                                    </span>
                                                </div>
                                                <select asp-for="Size" asp-items="ViewBag.Size">
                                                    <option selected value="=N/A=">=N/A=</option>
                                                </select>
                                                @*@Html.EditorFor(model => model.Size, new { htmlAttributes = new { @class = "form-control" } })*@
                                                @Html.ValidationMessageFor(model => model.Size, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>




                                </div>
                            </form>
                        </div>

                        <div class="card-footer">
                            <div class="row text-center m-2">
                                <br />
                                <div class="col-md-2"></div>
                                <div class="col-md-4 col-xs-12 d-block mx-auto">

                                    @if (ViewBag.Title == "Create")
                                    {
                                    <input type="submit" value="Save" class="btn btn-primary btn-md btn-block rounded-0" />
                                    }
                                    else if (ViewBag.Title == "Edit")
                                    {
                                    <input type="submit" value="Update" class="btn btn-warning btn-block rounded-0" />
                                    }
                                    else if (ViewBag.Title == "Delete")
                                    {
                                    <button class="btn btn-danger btn-md btn-block rounded-0" type="button" onclick="Style_delete()">Delete</button>
                                    }
                                </div>
                                <div class="col-md-4 col-xs-12 d-block mx-auto">
                                    @Html.ActionLink("Back", "StyleList", "HRVariables", null, new { @class = "btn btn-info btn-block rounded-0", @id = "btnBack" })

                                </div>
                                <div class="col-md-2"></div>

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

      
    </div>

}

@section Scripts{
    <script>

        // for style date formate
        $("#StyleDate").datepicker({
            changeMonth: true,
            changeYear: true,
            onSelect: function (date) {
                // Your CSS changes, just in case you still need them
                $('a.ui-state-default').removeClass('ui-state-highlight');
                $(this).addClass('ui-state-highlight');
                var dateFormat = $("#StyleDate").datepicker("option", "dateFormat");
                //setter
                $("#StyleDate").datepicker("option", "dateFormat", 'dd-M-yy');
            }
        });

        $("#StyleId").select2();

        function Style_delete() {

            var StyleId = $("#StyleId").val();

                //alert(SalesId);
                $.ajax({

                    url: '@Url.Action("DeleteStyle", "HRVariables")',
                    data: JSON.stringify({ id: StyleId }), //use id here
                    //data: JSON.stringify(salesmain),
                    type: 'POST',
                    contentType: 'application/json;',
                    dataType: 'json',
                    success: function (result) {
                    if (result.Success == "1") {
                        customFile('3', result.ex);
                        window.setTimeout(function () {
                            // Move to a new location or you can do something else
                            window.location.href = '@Url.Action("StyleList", "HRVariables")';
                        }, 500);
                    }
                    else {
                        toastr.error(result.ex);
                    }
                }
                });
            }


    </script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}