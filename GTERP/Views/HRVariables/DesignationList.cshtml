@model IEnumerable<GTERP.Models.Cat_Designation>
@{
    ViewBag.Title = "Designation Input";
}
<div class="container-fluid">

    <div class="text-center">
        <div class="row mb-2">
            <div class="col-md-3 col-12">
                @Html.ActionLink("Designation Creation", "CreateDesignation", "HRVariables", null, new { @class = "btn btn-outline-info btn-block rounded-0", @id = "btnBack" })
            </div>
            <div class="col-md-9 col-12">
                <h2 id="styletext">Designation List</h2>
            </div>
        </div>
    </div>

    <form class="card p-2 table-responsive">
        <table id="tbllist" class="table table-striped table-bordered table-sm  table-hover" cellspacing="0" width="100%">
            <thead class="text-nowrap">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.DesigName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DesigNameB)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Gsmin)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Grade)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AttBonus)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.HolidayBonus)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NightAllow)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TtlManpower)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SalaryRange)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SlNo)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DesigName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DesigNameB)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Gsmin)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Grade.GradeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AttBonus)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HolidayBonus)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NightAllow)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TtlManpower)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SalaryRange)
                        </td>
                                                <td>
                            @Html.DisplayFor(modelItem => item.SlNo)
                        </td>
                        <td class="text-nowrap">
                            <span data-toggle="tooltip" title="Edit!">
                                @Html.ActionLink(" ", "EditDesignation", new { id = item.DesigId }, new { @class = "fas fa-edit btn btn-warning btn-xs", @target = "_blank" })
                            </span>
                            <span data-toggle="tooltip" title="Delete!">
                                @Html.ActionLink(" ", "DeleteDesignation", new { Id = item.DesigId }, new { @class = "far fa-trash-alt btn btn-danger btn-xs" })
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <br />
    </form>
</div>


@section Scripts{

    <script>
        $(document).ready(function () {
            $('#tbllist').DataTable({
                dom: '<"dom_wrapper fh-fixedHeader"flB>tip',
                //"sDom": "<'row'<'col-sm-12'<'form-group'<f>>>>tr<'row'<'col-sm-12'<'pull-left'i><'pull-right'p><'clearfix'>>>",
                //buttons: [
                //    'copy', 'csv', 'excel', 'pdf'
                //],
                buttons: {
                    dom: {
                        button: {
                            className: 'btn rounded-0'
                        }
                    },
                    buttons: [
                        //'copy', 'csv', 'excel', 'pdf'
                        //$(this).addClass("btn-group dt-buttons justify-content-center mb-3")
                        {
                            extend: 'colvis',
                            "columns": ':not(:last-child)',
                            text: '<i class="mdi mdi-view-column"></i>',
                            className: 'btn-info',
                            titleAttr: 'Show / hide columns',
                            //collectionLayout: 'fixed two-column'

                        },
            
                        {
                            extend: 'excel',
                            text: '<i class="mdi mdi-file-excel"></i>',
                            className: 'btn-success',
                            titleAttr: 'Export to excel'
                        },
                        {
                            extend: 'pdfHtml5',
                            orientation: 'landscape',
                            pageSize: 'LEGAL',
                            text: '<i class="mdi mdi-file-pdf"></i>',
                            className: 'btn-danger',
                            titleAttr: 'Export to PDF',
               

                        },
                        {
                            extend: 'print',
                            text: '<i class="mdi mdi-printer"></i>',
                            className: 'btn-info',
                            titleAttr: 'Print Table'
                        }

                    ]
                },

                "searching": true,
                "paging": false,
                "ordering": true,
                "info": true,
                "iDisplayLength": 15,
                "lengthMenu": [[5, 10, 20, 50, -1], [5, 10, 20, 50, "All"]],
                "scrollX": true,
                "scrollY": "60vh",
                "scrollCollapse": true,
                language: {
                    sLengthMenu: "_MENU_",
                    search: "",
                    searchPlaceholder: "Search..."
                }
            });
        });


    </script>
}


