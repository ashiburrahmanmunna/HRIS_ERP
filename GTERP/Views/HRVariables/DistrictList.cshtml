@model IEnumerable<GTERP.Models.Cat_District>
@*<link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />*@

<div class="container-fluid">
    <div class="text-center">
        <div class="row mb-2">
            <div class="col-md-3 col-12">
                @Html.ActionLink("District Creation", "CreateDistrict", null, null, new { @class = "btn btn-outline-info btn-block rounded-0", @id = "btnBack" })
            </div>
            <div class="col-md-9 col-12">
                <h2 id="styletext">District List</h2>
            </div>
        </div>
    </div>


    <form class="card p-2 table-responsive">
        <table id="tbllist" class="table table-striped table-bordered table-sm  table-hover" cellspacing="0" width="100%">
            <thead class="text-nowrap">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.DistName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DistNameB)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DistNameShort)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SL)
                    </th>
                    @*<th>
            @Html.DisplayNameFor(model => model.Country.CountryName)
        </th>*@


                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DistName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DistNameB)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DistNameShort)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SL)
                    </td>
                    @*<td>
            @Html.DisplayFor(modelItem => item.Country.CountryName)
        </td>*@


                    <td class="text-nowrap">
                        <span data-toggle="tooltip" title="Edit!">
                            @Html.ActionLink(" ", "EditDistrict", new { id = item.DistId }, new { @class = "fas fa-edit btn btn-warning btn-xs", @target = "_blank" })
                        </span>
                        <span data-toggle="tooltip" title="Delete!">
                            @Html.ActionLink(" ", "DeleteDistrict", new { Id = item.DistId }, new { @class = "far fa-trash-alt btn btn-danger btn-xs" })
                        </span>
                    </td>
                </tr>

                }
            </tbody>
            <tfoot>
                <tr>
                    <td>
                        @Html.DisplayNameFor(model => model.DistName)
                    </td>
                    <td>
                        @Html.DisplayNameFor(model => model.DistNameB)
                    </td>
                    <td>
                        @Html.DisplayNameFor(model => model.DistNameShort)
                    </td>
                    @*<th></th>
                    <th></th>*@
                </tr>
            </tfoot>
        </table>
    </form>
</div>


@section Scripts{

    @*<script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>*@

    <script>
        $(document).ready(function () {

            $('#tbllist').DataTable({
                dom: '<"dom_wrapper fh-fixedHeader"fl>tip',
                initComplete: function () {
                    this.api().columns().every(function () {
                        var column = this;
                        var select = $('<select style="width:100%;"><option value="">--Please Select--</option></select>')
                            .appendTo($(column.footer()).empty())
                            .on('change', function () {
                                var val = $.fn.dataTable.util.escapeRegex(
                                    $(this).val()
                                );

                                column
                                    .search(val ? '^' + val + '$' : '', true, false)
                                    .draw();
                            });

                        column.data().unique().sort().each(function (d, j) {
                            select.append('<option value="' + d + '">' + d + '</option>')
                        });
                    });
                },
                "language": {

                    sLengthMenu: " _MENU_",
                    search: "",
                    searchPlaceholder: "Search..."
                }
            });
            $("select").select2({
                theme: "bootstrap4",
            });
        });
    </script>
}


