@model IEnumerable<GTERP.ViewModels.HR_OverTimeSettingVM>
@{
    ViewBag.Title = "Over Time Setting";
}
<div class="container-fluid">
    <div class="text-center">
        <div class="row mb-2">
            <div class="col-md-3 col-12 d-flex justify-content-start">
                <a asp-action="CreateOvertimeSetting" class="btn btn-outline-info btn-block rounded-0 mb-2">Overtime Entry</a>
            </div>
            <div class="col-md-9 col-12">
                <h2 id="styletext">HR Overtime Setting</h2>
            </div>
        </div>
    </div>

    <form class="card p-2 table-responsive">
        <table id="tbllist" class="table table-striped table-bordered table-sm  table-hover" cellspacing="0" width="100%">
            <thead class="text-nowrap">
                <tr>
                    <th>
                        Company Name
                    </th>
                    <th>
                        Is Allow Minute
                    </th>
                    <th>
                        GraceTime From
                    </th>
                    <th>
                        GraceTime To
                    </th>
                    <th>
                        From1
                    </th>
                    <th>
                       To1
                    </th>
                    <th>
                       OT1
                    </th>
                    <th>
                        From2
                    </th>
                    <th>
                        To2
                    </th>
                    <th>
                        OT2
                    </th>
                    <th>
                        From3
                    </th>
                    <th>
                        To3
                    </th>
                    <th>
                        OT3
                    </th>
                    <th>
                        From4
                    </th>
                    <th>
                        To4
                    </th>
                    <th>
                        OT4
                    </th>
                    <th>
                        OTStart
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompanyName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsAllowMinute)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GraceTimeFrom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GraceTimeTo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.From1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.To1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OT1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.From2)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.To2)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OT2)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.From3)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.To3)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OT3)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.From4)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.To4)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OT4)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.OTStart)
                    </td>

                    <td class="text-nowrap">
                        <span data-toggle="tooltip" title="Edit!">
                            @Html.ActionLink(" ", "EditOvertimeSetting", new { id = item.Id }, new { @class = "fas fa-edit btn btn-warning btn-xs", @target = "_blank" })
                        </span>
                        <span data-toggle="tooltip" title="Delete!">
                            @Html.ActionLink(" ", "DeleteOvertimeSetting", new { Id = item.Id }, new { @class = "far fa-trash-alt btn btn-danger btn-xs" })
                        </span>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </form>
</div>

@section Scripts{ 
    <script>
        $(document).ready(function () {
            $('#tbllist').DataTable({
                dom: '<"dom_wrapper fh-fixedHeader"flB>tip',
               
                buttons: {
                    dom: {
                        button: {
                            className: 'btn rounded-0'
                        }
                    },
                    buttons: [
                       
                        {
                            extend: 'colvis',
                            "columns": ':not(:last-child)',
                            text: '<i class="mdi mdi-view-column"></i>',
                            className: 'btn-info',
                            titleAttr: 'Show / hide columns',
                           
                        },
                        
                        {
                            extend: 'excel',
                            text: '<i class="mdi mdi-file-excel"></i>',
                            className: 'btn-success',
                            titleAttr: 'Export to excel'
                        },
                        {
                            extend: 'pdfHtml5',
                            orientation: 'landscape',
                            pageSize: 'LEGAL',
                            text: '<i class="mdi mdi-file-pdf"></i>',
                            className: 'btn-danger',
                            titleAttr: 'Export to PDF',
                           
                        },
                        {
                            extend: 'print',
                            text: '<i class="mdi mdi-printer"></i>',
                            className: 'btn-info',
                            titleAttr: 'Print Table'
                        }

                    ]
                },
                
                "searching": true,
                "paging": false,
                "ordering": true,
                "info": true,
                "iDisplayLength": 15,
                "lengthMenu": [[5, 10, 20, 50, -1], [5, 10, 20, 50, "All"]],
                "scrollX": true,
                "scrollY": "60vh",
                "scrollCollapse": true,
                language: {
                    sLengthMenu: "_MENU_",
                    search: "",
                    searchPlaceholder: "Search..."
                }
                
            });
        });
    </script>
                                   
}