@model IEnumerable<GTERP.Models.Cat_Section>
@{
    ViewBag.Title = "Section Input";
}
<div class="container-fluid">

    <div class="text-center">
        <div class="row mb-2">
            <div class="col-md-3 col-12">
                @Html.ActionLink("Section Creation", "CreateSection", "HRVariables", null, new { @class = "btn btn-outline-info btn-block rounded-0", @id = "btnBack" })
            </div>
            <div class="col-md-9 col-12">
                <h2 id="styletext">Section List</h2>
            </div>
        </div>
    </div>

    <form class="card p-2 table-responsive">
        <table id="tbllist" class="table table-striped table-bordered table-sm  table-hover" cellspacing="0" width="100%">
            <thead class="text-nowrap">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.SectName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SectNameB)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Dept.DeptName)
                    </th>
                    <th>
                        Section HOD
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Slno)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SectName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SectNameB)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Dept.DeptName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SectHODName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Slno)
                        </td>

                        <td class="text-nowrap">
                            <span data-toggle="tooltip" title="Edit!">
                                @Html.ActionLink(" ", "EditSection", new { id = item.SectId }, new { @class = "fas fa-edit btn btn-warning btn-xs", @target = "_blank" })
                            </span>
                            <span data-toggle="tooltip" title="Delete!">
                                @Html.ActionLink(" ", "DeleteSection", new { Id = item.SectId }, new { @class = "far fa-trash-alt btn btn-danger btn-xs" })
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <br />
    </form>
</div>


@section Scripts{

    <script>
        $(document).ready(function () {
            $('#tbllist').DataTable({
                dom: '<"dom_wrapper fh-fixedHeader"flB>tip',
                buttons: {
                    dom: {
                        button: {
                            className: 'btn rounded-0'
                        }
                    },
                    buttons: [
                        {
                            extend: 'colvis',
                            "columns": ':not(:last-child)',
                            text: '<i class="mdi mdi-view-column"></i>',
                            className: 'btn-info',
                            titleAttr: 'Show / hide columns',

                        },
                        {
                            extend: 'excel',
                            text: '<i class="mdi mdi-file-excel"></i>',
                            className: 'btn-success',
                            titleAttr: 'Export to excel'
                        },
                        {
                            extend: 'pdfHtml5',
                            orientation: 'landscape',
                            pageSize: 'LEGAL',
                            text: '<i class="mdi mdi-file-pdf"></i>',
                            className: 'btn-danger',
                            titleAttr: 'Export to PDF',

                        },
                        {
                            extend: 'print',
                            text: '<i class="mdi mdi-printer"></i>',
                            className: 'btn-info',
                            titleAttr: 'Print Table'
                        }

                    ]
                },
                "searching": true,
                "paging": false,
                "ordering": true,
                "info": true,
                "iDisplayLength": 15,
                "lengthMenu": [[5, 10, 20, 50, -1], [5, 10, 20, 50, "All"]],
                "scrollX": true,
                "scrollY": "60vh",
                "scrollCollapse": true,
                language: {
                    sLengthMenu: "_MENU_",
                    search: "",
                    searchPlaceholder: "Search..."
                }
            });
        });

    </script>
}


