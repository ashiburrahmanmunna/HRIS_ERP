@model IEnumerable<GTERP.Models.Cat_Shift>

<div class="container-fluid">
    <div class="text-center">
        <div class="row mb-2">
            <div class="col-md-3 col-12">
                @Html.ActionLink("Shift Entry", "CreateShift", null, null, new { @class = "btn btn-outline-info btn-block rounded-0", @id = "btnBack" })
            </div>
            <div class="col-md-9 col-12">
                <h2 id="styletext">Shift List</h2>
            </div>
        </div>
    </div>

    <form class="card p-2 table-responsive">
        <table id="tbllist" class="table table-striped table-bordered table-sm  table-hover" cellspacing="0" width="100%">
            <thead class="text-nowrap">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ShiftName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ShiftCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ShiftDesc)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ShiftIn)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ShiftOut)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ShiftLate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LunchTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LunchIn)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LunchOut)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RegHour)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ShiftType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ShiftCat)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TiffinTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TiffinIn)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TiffinOut)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TiffinTime1)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TiffinTimeIn1)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TiffinTime2)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TiffinTimeIn2)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsInactive)
                    </th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShiftName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShiftCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShiftDesc)
                    </td>
                    <td>
                        @item.ShiftIn.ToString(" HH:mm")
                    </td>
                    <td>
                        @item.ShiftOut.ToString(" HH:mm")

                    </td>
                    <td>
                        @item.ShiftLate.ToString(" HH:mm")

                    </td>
                    <td>
                        @item.LunchTime.ToString(" HH:mm")

                    </td>
                    <td>
                        @item.LunchIn.ToString(" HH:mm")
                    </td>
                    <td>
                        @item.LunchOut.ToString(" HH:mm")
                        
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RegHour)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShiftType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShiftCat)
                    </td>
                    <td>
                        @item.TiffinTime.ToString(" HH:mm")
                    </td>
                    <td>
                        @item.TiffinIn.ToString(" HH:mm")
                    </td>
                    <td>
                        @item.TiffinOut.ToString(" HH:mm")
                        
                    </td>
                    <td>
                        @item.TiffinTime1.Value.ToString(" HH:mm")

                    </td>
                    <td>
                        @item.TiffinTimeIn1.Value.ToString(" HH:mm")

                    </td>
                    <td>
                        @item.TiffinTime2.Value.ToString(" HH:mm")

                    </td>
                    <td>
                        @item.TiffinTimeIn2.Value.ToString(" HH:mm")
                    </td>
                    <td>
                        
                        @Html.DisplayFor(modelItem => item.IsInactive)
                    </td>

                    <td class="text-nowrap">
                        <span data-toggle="tooltip" title="Edit!">
                            @Html.ActionLink(" ", "EditShift", new { id = item.ShiftId }, new { @class = "fas fa-edit btn btn-warning btn-xs", @target = "_blank" })
                        </span>
                        <span data-toggle="tooltip" title="Delete!">
                            @Html.ActionLink(" ", "DeleteShift", new { Id = item.ShiftId }, new { @class = "far fa-trash-alt btn btn-danger btn-xs" })
                        </span>
                    </td>
                </tr>
                }
                </tbody>
        </table>
    </form>
</div>


