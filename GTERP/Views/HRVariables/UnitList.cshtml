@model IEnumerable<GTERP.Models.Unit>

<div class="container-fluid">

    <div class="text-center">
        <div class="row">
            <div class="col-md-3 col-12">
                @Html.ActionLink("Unit Creation", "CreateUnit", null, null, new { @class = "btn btn-outline-info btn-block rounded-0", @id = "btnBack" })

            </div>
            <div class="col-md-9 col12 ">
                <h2 id="styletext">Unit List</h2>
            </div>
        </div>
    </div>


    <form class="card p-2">
        <div class="table-responsive">
            <table id="tbllist" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
                <thead class="text-nowrap">
                    <tr>

                        <th>
                            Unit Name
                        </th>
                        <th>
                            Short Name
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.UnitName)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.UnitShortName)
                            </td>

                            <td class="text-nowrap">
                                <span data-toggle="tooltip" title="Edit!">
                                    @Html.ActionLink(" ", "EditUnit", new { id = item.UnitId }, new { @class = "fas fa-edit btn btn-warning btn-xs", @target = "_blank" })
                                </span>
                                <span data-toggle="tooltip" title="Delete!">
                                    @Html.ActionLink(" ", "DeleteUnit", new { Id = item.UnitId }, new { @class = "far fa-trash-alt btn btn-danger btn-xs" })
                                </span>


                            </td>
                            @*<td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.UnitId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.UnitId })
                </td>*@
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </form>
</div>

@section Scripts{

    <script>
        $(document).ready(function () {

            $('#tbllist').DataTable({
                dom: '<"dom_wrapper fh-fixedHeader"flB>tip',
                //"sDom": "<'row'<'col-sm-12'<'form-group'<f>>>>tr<'row'<'col-sm-12'<'pull-left'i><'pull-right'p><'clearfix'>>>",
                //buttons: [
                //    'copy', 'csv', 'excel', 'pdf'
                //],
                buttons: {
                    dom: {
                        button: {
                            className: 'btn rounded-0'
                        }
                    },
                    buttons: [

                        {
                            extend: 'excel',
                            text: '<i class="mdi mdi-file-excel"></i>',
                            className: 'btn-success',
                            titleAttr: 'Export to excel'
                        }
                    ]
                },
                "columnDefs": [
                    // Hide second, third and fourth columns
                    //{ "visible": false, "targets": [3, 4, 7, 9, 10] }
                ],
                "searching": true,
                "paging": false,
                "ordering": true,
