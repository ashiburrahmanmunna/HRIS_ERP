@if (Model != null)
{
    @foreach (var item in Model)
    {
        <div class="container">
            <span style="color:red">@ViewBag.error</span>

            <div class="row ">

                <div class="col-md-12 col-12">
                    <div class="row">
                        <div class="col-md-4 col-12 mx-auto d-flex  justify-content-center">
                            @if (item.ComLogo == null)
                            {
                                <img src="@Url.Content("~/Content/img/0.png")" class="img-fluid img-thumbnail" style="height:150px"  />

                            }
                            else
                            {
                                <img src="data:image/jpeg;base64,@(Convert.ToBase64String(item.ComLogo))" class="img-fluid img-thumbnail " style="height:150px" />

                            }
                        </div>
                       
                    </div>

                    <h2 class="text-info text-center" style="font-family: 'Raleway', sans-serif;">
                           @item.CompanyName
                        </h2>

                </div>

                <div class="col-md-4 col-12 my-2">
                    <div class="card">
                        <div class="card-header">
                            <h6 class="font-weight-bold text-success">Company Profile</h6>

                        </div>
                        <div class="card-body px-3 py-2 mb-2">
                            <p><strong>Year of Establishment: </strong> @item.YearOfEst </p>
                            <p><strong>Number of employees:  </strong>@item.NoE </p>
                            <p>.</p>
                        </div>
                    </div>

                </div>
                <div class="col-md-8 col-12 my-2">
                    <div class="card">
                        <div class="card-header">
                            <h6 class="font-weight-bold text-success">Company Name & Address with Office </h6>
                        </div>
                        <div class="card-body mb-2">
                            <div><strong>@item.CompanyName</strong></div>
                            <div><strong>Corporate Office:</strong> @item.PrimaryAddress</div>
                            <div><strong>Phone: </strong> @item.comPhone,@item.comPhone2 </div>
                            <div><strong>Web: </strong> @item.comWeb</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 col-12 my-2">
                    <div class="card">
                        <div class="card-header">
                            <h6 class="font-weight-bold text-success">Chairman / Managing Director: </h6>
                        </div>
                        <div class="card-body">
                            <div><strong> @item.MD_Name</strong> </div>
                            <div><strong>Phone: </strong>@item.MD_Phone </div>
                            <div><strong>Email: </strong>  <a href="mailto:'@item.MD_Email'">@item.MD_Email</a></div>

                        </div>
                    </div>



                </div>

                <div class="col-md-4 col-12 my-2">
                    <div class="card">
                        <div class="card-header">
                            <h6 class="font-weight-bold text-success">HR, ADMIN & Compliance:</h6>
                        </div>
                        <div class="card-body">

                            <div><strong> @item.HR_Name</strong> </div>
                            <div><strong>Phone: </strong>@item.HR_Phone </div>
                            <div><strong>Email: </strong>  <a href="mailto:'@item.HR_Email'">@item.HR_Email</a></div>

                        </div>
                    </div>


                </div>

                <div class="col-md-4 col-12 my-2">
                    <div class="card">
                        <div class="card-header">
                            <h6 class="font-weight-bold text-success">Acountant</h6>
                        </div>
                        <div class="card-body">
                            <div><strong> @item.AcountantName</strong> </div>
                            <div><strong>Phone: </strong>@item.AcountantPhone </div>
                            <div><strong>Email: </strong>  <a href="mailto:'@item.AcountantEmail'">@item.AcountantEmail</a></div>

                        </div>
                    </div>


                </div>



            </div>
        </div>
    }


}





