@model IEnumerable<GTERP.Models.Cat_Integration_Setting_Main>


<div class="container-fluid">
    <form class="card p-2">
        <div class="row mb-2">

            <div class="col-md-2 col-12">
                @Html.ActionLink("Integration Setting Create", "Create", null, null, new { @class = "btn btn-outline-info btn-block rounded-0", @id = "btnBack" })

            </div>

            <div class="col-md-6 col-12 d-block mx-auto flot-right">
                <h2 id="styletext">Integration Setting List</h2>
            </div>

            <div class="col-md-2 col-12"></div>
        </div>
        <div class="table-responsive">
        <table id="tbllist" class="table table-striped table-bordered table-sm  table-hover" cellspacing="0" width="100%">
            <thead class="text-nowrap">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.IntegrationSettingName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IntegrationTableName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MainSLNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Acc_VoucherType.VoucherTypeName)
                    </th>


                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IntegrationSettingName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IntegrationTableName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MainSLNo)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Acc_VoucherType.VoucherTypeName)
                    </td>

                    <td class="text-nowrap">
                        <span data-toggle="tooltip" title="Edit!">
                            @Html.ActionLink(" ", "Edit", new { id = item.IntegrationSettingMainId }, new { @class = "fas fa-edit btn btn-warning btn-xs", @target = "_blank" })
                        </span>
                        <span data-toggle="tooltip" title="Copy!">
                            @Html.ActionLink(" ", "CreateCopy", new { id = item.IntegrationSettingMainId }, new { @class = "fas fa-clipboard btn btn-info btn-xs", @target = "_blank" })
                        </span>
                        <span data-toggle="tooltip" title="Delete!">
                            @Html.ActionLink(" ", "Delete", new { Id = item.IntegrationSettingMainId }, new { @class = "far fa-trash-alt btn btn-danger btn-xs" })
                        </span>
                    </td>
                </tr>
                }
        </table>
     </div>
    </form>
</div>


