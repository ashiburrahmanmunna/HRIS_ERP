

<div class="container-fluid">
    <div class="row mb-2">
        <div class="col-md-3 col-12">
            @Html.ActionLink("Menu Permission Creation", "VersionMenu", "MenuPermission", null, new { @class = "btn btn-outline-info btn-block rounded-0", @id = "btnBack" })
        </div>
        <div class="col-md-9 col-12">
            <h2 id="styletext">Version Menu Permission List</h2>
        </div>
    </div>
    <div class="card p-2">
        <div class="table-responsive">
            <table id="tbllist" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>
                            MenuPermissionId
                        </th>
                        <th>
                            Software
                        </th>
                        <th>
                            Version
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (ViewBag.versionList != null)
                    {

                        @foreach (var item in ViewBag.versionList)
                        {
                            <tr>
                                <td>
                                    @item.MenuPermissionId
                                </td>
                                <td>
                                    @item.SoftwareName
                                </td>
                                <td>
                                    @item.VersionName
                                </td>
                                <td>
                                    <span data-toggle="tooltip" title="Edit">
                                        @*<a asp-action="VersionMenu" asp-controller="MenuPermission" asp-route-softwareId="@item.SoftwareId" asp-route-versionId="@item.VersionId" asp-route-MenuPermissionId="@item.MenuPermissionId" asp-route-VersionReportMasterId="@item.versionReportMasterId" asp-route-isDelete="0">Edit</a>*@
                                        @Html.ActionLink(" ", "VersionMenu", "MenuPermission", new { softwareId = item.SoftwareId, versionId = item.VersionId, MenuPermissionId = item.MenuPermissionId, VersionReportMasterId=item.VersionReportMasterId, isDelete = 0 }, new { @class = "fas fa-edit btn btn-warning btn-xs", @target = "_blank" })
                                    </span>
                                    <span data-toggle="tooltip" title="Delete">
                                        @Html.ActionLink(" ", "VersionMenu", "MenuPermission", new { softwareId = item.SoftwareId, versionId = item.VersionId, MenuPermissionId = item.MenuPermissionId, VersionReportMasterId = item.VersionReportMasterId, isDelete = 1 }, new { @class = "far fa-trash-alt btn btn-danger btn-xs" })
                                    </span>
                                </td>
                            </tr>
                        }

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


