        function BSCalculate(data) {

            var bs = parseInt($("#BasicSalary").val());
            // for house rent
            if (data.HR != null) {
               // console.log(data.HR);
                var hrSetting = data.HR;

                if (hrSetting.IsPersentage) {
                    var hr = (hrSetting.HR / 100) * bs;
                        $("#HouseRent").val((hr < hrSetting.MinHR)?hrSetting.MinHR:hr); // if hr entry by persentage
                    $("#MadicalAllow").val(hrSetting.MA);
                }
                else {
                    $("#HouseRent").val((hrSetting.HR < hrSetting.MinHR) ? hrSetting.MinHR : hrSetting.HR);
                    $("#MadicalAllow").val(hrSetting.MA);
                }

            } else {
                toastr.warning("Sorry, HR data not found this criteria !!!");
                //return false;
            }

            // for HRexp charge
            if (data.HRExp != null) {
                var hRExpSetting = data.HRExp;

                    if (hRExpSetting.IsPersentage) {
                        $("#HrExp").val((hRExpSetting.HRExp / 100) * bs); // if hr entry by persentage
                    }
                    else {
                        $("#HrExp").val(hRExpSetting.HRExp);
                    }

            }
            else {
                toastr.warning("Sorry, HR Expence Charge no data found this criteria !!!");
                $("#HrExp").val(0);
            }

            // for Gas charge
            if (data.GasCharge != null) {
                var gasSetting = data.GasCharge;
                if ($("#BasicSalary").val() != "") {
                    if (gasSetting.IsPersentage) {
                        $("#Gascharge").val((gasSetting.GasCharge / 100) * bs); // if hr entry by persentage
                    }
                    else {
                        $("#Gascharge").val(gasSetting.GasCharge);
                    }
                }

            }
            else {
                toastr.warning("Sorry, Gas Charge no data found this criteria !!!");
            }


            // for electric charge
            if (data.ElectricCharge != null) {
                var electricSetting = data.ElectricCharge;
                if ($("#BasicSalary").val() != "") {
                    if (electricSetting.IsPersentage) {
                        $("#ElectricCharge").val((electricSetting.ElectricCharge / 100) * bs); // if hr entry by persentage
                    }
                    else {
                        $("#ElectricCharge").val(electricSetting.ElectricCharge);
                    }
                }

            }
            else {
                toastr.warning("Sorry, Electric Charge no data found this criteria !!!");
            }
        }


        function autoCalculation() {

            if (($("#EmpId").val() == 0)) {
                toastr.warning("Please select an employee");
                return false;
            }

            var empid = $("#EmpId").val();
            var LId1 = $("#LId1").val();
            var BId = $("#BId").val();

