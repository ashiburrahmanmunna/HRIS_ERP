@model GTERP.ViewModels.SubmittedCVVM
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Colorlib Templates">
    <meta name="author" content="Colorlib">
    <meta name="keywords" content="Colorlib Templates">

    <!-- Title Page-->
    <title>Apply for job</title>

    <!-- Font special for pages-->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i" rel="stylesheet">

    <!-- Main CSS-->
    <link href="/css/apply.css" rel="stylesheet" media="all">
</head>

<body>
    <div class="page-wrapper bg-dark p-t-100 p-b-50">
        <div class="wrapper wrapper--w900">
            <div class="card card-6">
                <div class="card-heading">
                    <h2 class="title">Apply for job <span class="badge badge-success">@ViewBag.PostTitle</span> </h2>
                </div>
                <div class="card-body">
                    <form asp-action="ApplyForm" enctype="multipart/form-data">
                        <div class="form-row">
                            <div class="name">Full name</div>
                            <div class="value">
                                <input class="input--style-6" type="text" asp-for="Name" required>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="name">Email address</div>
                            <div class="value">
                                <div class="input-group">
                                    <input class="input--style-6" type="email" asp-for="Email" placeholder="example@email.com" required>
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="name">Phone Number</div>
                            <div class="value">
                                <div class="input-group">
                                    <input class="input--style-6" type="tel" asp-for="Number" placeholder="0161000000" required>
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="name">linkedin Id</div>
                            <div class="value">
                                <div class="input-group">
                                    <input class="input--style-6" type="url" asp-for="linkedin_Url" placeholder="https://www.linkedin.com/id">
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="name">Expected Salary</div>
                            <div class="value">
                                <div class="input-group">
                                    <input class="input--style-6" type="number" asp-for="ExpectedSalary">
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="name">Cover Letter</div>
                            <div class="value">
                                <div class="input-group">
                                    <textarea class="textarea--style-6" asp-for="CoverLetter" placeholder="Message to the recruiter"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="name">Upload CV</div>
                            <div class="value">
                                <input asp-for="Attachment" type="file" />
                                @* <div class="input-group js-input-file">
                                <input asp-for="Attachment" type="file" class="input-file" name="Attachment" id="Attachment" required>
                                <label class="label--file" for="file">Choose file</label>
                                <span class="input-file__info">No file chosen</span>
                                </div>*@
                                <div class="label--desc">Upload your latest CV in pdf format. Max file size 5 MB</div>
                            </div>
                        </div>

                        <input class="input--style-6" type="hidden" asp-for="PostId" value="@ViewBag.id">
                        <div class="card-footer">
                            <button class="btn btn--radius-2 btn--blue-2" type="submit" value="Submit">Send Application</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>

    <!-- Jquery JS-->
    <script src="/js/jquery.min.js"></script>


    <!-- Main JS-->
    <script src="/js/global.js"></script>

</body>

</html>
<!-- end -->
