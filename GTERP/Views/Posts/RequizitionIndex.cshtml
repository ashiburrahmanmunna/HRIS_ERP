@model IEnumerable<GTERP.Models.Recruitment.HR_Recruitment_Requisition>

@{
    ViewData["Title"] = "Index";
   
}
<div>
    <br />
</div>
<h1 class="display-6 mb-0">Requisition List</h1>
<br />
<p>
    <a asp-action="RequisitionCreate">Create New</a>
</p>
<table class="table table-bordered" style="width:100%" id="example">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Requ_Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Designation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vacancy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Details)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Requ_Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Designation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Vacancy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department.Dept_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Details)
                </td>
                <td>
                    <a asp-action="RequisitionEdit" asp-route-id="@item.RequId" class="btn btn-outline-warning m-2 btn-sm">Edit</a>
                    <a asp-action="RequisitionDeleteConfirmed" asp-route-id="@item.RequId" class="btn btn-outline-danger m-2 btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

