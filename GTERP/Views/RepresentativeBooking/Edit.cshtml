@model GTERP.Models.Buffers.RepresentativeBooking

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Edit", "RepresentativeBooking", FormMethod.Post, new { enctype = "multipart/form-data", id = "myform" }))
{
    <div class="container-fluid p-4" style="max-width:800px">
        <div class="card p-5">
            <div class="row">
                <form asp-action="Edit">
                    <h2 class="text-center">Booking / Allotment Edit</h2>
                    <br />
                    <div class="form-row">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="RepresentativeBookingId" />
                        <input type="hidden" asp-for="ComId" />
                        <input type="hidden" asp-for="UserId" />
                        <input type="hidden" asp-for="DateAdded" />
                        <input type="hidden" asp-for="DateUpdated" />


                        <div class="form-group col-md-6">
                            @*<label asp-for="FiscalYearId" class="control-label"></label>*@
                            <label class="control-label">Year</label>
                            <select asp-for="FiscalYearId" class="form-control" asp-items="ViewBag.FiscalYearId"></select>
                            <span asp-validation-for="FiscalYearId" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                           
                            <label class="control-label">Month</label>
                            <select asp-for="FiscalMonthId" class="form-control" asp-items="ViewBag.FiscalMonthId"></select>
                            <span asp-validation-for="FiscalMonthId" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-12">
                           
                            <label class="control-label">Representative</label>
                            <select asp-for="BufferRepresentativeId" class="form-control" asp-items="ViewBag.RepresentativeId"></select>
                            <span asp-validation-for="BufferRepresentativeId" class="text-danger"></span>
                        </div>
                       
                        <div class="form-group col-md-6">
                            @*<label asp-for="DistId" class="control-label"></label>*@
                            <label class="control-label">Buffer</label>
                            <select asp-for="BufferListId" class="form-control" asp-items="ViewBag.BufferId"></select>
                            <span asp-validation-for="BufferListId" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group col-md-6">
                            @*<label asp-for="AllotmentQty" class="control-label"></label>*@
                            <label class="control-label">Qty</label>
                            <input asp-for="AllotmentQty" class="form-control" />
                            <span asp-validation-for="AllotmentQty" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group text-center">
                        <input type="submit" value="Update" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-info">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

}
    @section Scripts{
        <script>
            //$('#FiscalYearId').attr('disabled', false);


            $("#FiscalYearId").select2();
            $("#FiscalMonthId").select2();
            $("#BufferRepresentativeId").select2();
            $("#BufferListId").select2();
          



            $('#FiscalYearId').attr('disabled', true);
            $('#FiscalMonthId').attr('disabled', true);
            $('#BufferRepresentativeId').attr('disabled', true);
            $('#BufferListId').attr('disabled', true);
            
            //$('#PoliceStation').attr('disabled', true);


            $('#myform').submit(function () {

                if (!$("#myform").valid()) {
                    alert('Please Fill Up All Necessary Information Correctly.');
                    return false;
                }

                $('select').removeAttr('disabled');
                //alert('ok');
            });


        </script>

    }