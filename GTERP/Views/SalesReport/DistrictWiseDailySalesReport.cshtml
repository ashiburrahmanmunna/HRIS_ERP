@model IEnumerable<GTERP.Controllers.Sales.SalesReport.SalesReportController.DistrictWiseDailySalesVM>

@using (Html.BeginForm())
{
    <div class="container-fluid">

        <div class="text-center">
            <div class="row">

                @*<div class="col">
