                    <div class="col-md-8 col-12">
                        <button class="btn btn-warning" type="button" onclick="ReportPrint('PrintrptAllotmentMonthWiseDistrictReport')">Allotment Month Wise District Summary</button>
                        <button class="btn btn-primary" type="button" onclick="ReportPrint('PrintrptDeliveryDateWiseBankSummaryReport')">Delivery Date Wise Bank Report</button>
                        <button class="btn btn-info" type="button" onclick="ReportPrint('PrintrptAllotmentWiseSummaryReport')">Allotment Wise Summary Report</button>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group row col-md-4">
                        <label class="col-3 control-label">Year:</label>
                        <div class="col-9">
                            <select id="YearNameId" class="form-control" asp-items="ViewBag.Year">
                                <option>=Year=</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-8 col-12">
                        <button class="btn btn-success" type="button" onclick="ReportPrint('PrintAnnualSalesReport')">Annual Salse Report</button>
                        <button class="btn btn-warning" type="button" onclick="ReportPrint('PrintrptBankWiseSummaryReport')">Bank Wise Yearly Summary Report</button>
                        <button class="btn btn-primary" type="button" onclick="ReportPrint('PrintrptDellerWiseBalanceReport')">Deller Wise Balance Report</button>
                        <button class="btn btn-info" type="button" onclick="ReportPrint('PrintrptMonthWiseSalesReport')">Month Wise Sales Summary</button>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group row col-md-4">
