                <div class="row">
                    <div class="form-group row col-md-6">
                        <label class="col-4 control-label">Booking Month:</label>
                        <div class="col-8">
                            <select id="monthid" class="form-control" asp-items="ViewBag.Month">
                                <option>=All=</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
