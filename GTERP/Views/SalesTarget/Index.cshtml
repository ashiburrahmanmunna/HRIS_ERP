@model IEnumerable<GTERP.Models.SalesTargetSetup>

    <div class="container-fluid">

            <div class="row text-center mb-2">
                <div class="col-md-3 col-12">
                    @Html.ActionLink("Sales Target Creation", "Create", null, null, new { @class = "btn btn-outline-info btn-block rounded-0", @id = "btnBack" })
                </div>
                <div class="col-md-3 col-12">
                    <h2 id="styletext">Sales Target List</h2>
                </div>
                <div class="col-md-6">

                </div>
            </div>



        <form class="card p-2 table-responsive">
            <table id="tbllist" class="table table-striped table-bordered table-sm  table-hover" cellspacing="0" width="100%">
                <thead class="text-nowrap">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Unit.PrdUnitName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MonthName.MonthName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.YearName.FYName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FiscalYearGoal)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FiscalMonthGoal)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.Remarks)
                        </th>

                        <th>Action</th>
                    </tr>
                </thead>
                <tbody class="text-nowrap">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Unit.PrdUnitName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MonthName.MonthName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.YearName.FYName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FiscalYearGoal)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FiscalMonthGoal)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Remarks)
                            </td>

                            <td class="text-nowrap">
                                <span data-toggle="tooltip" title="Edit!">
                                    @Html.ActionLink(" ", "Edit", new { id = item.SaleTargetSetId }, new { @class = "fas fa-edit btn btn-warning btn-xs", @target = "_blank" })
                                </span>
                                <span data-toggle="tooltip" title="Delete!">
                                    @Html.ActionLink(" ", "Delete", new { Id = item.SaleTargetSetId }, new { @class = "far fa-trash-alt btn btn-danger btn-xs" })
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />
        </form>
    </div>


