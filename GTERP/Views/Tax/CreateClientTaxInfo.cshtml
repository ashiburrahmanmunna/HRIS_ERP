@section Scripts{
    <script>

        $("#DtSubmission,#DtAckSlipReceive,#DtTaxCerRcv,#DtTexExtension").datepicker({
            changeMonth: true,
            changeYear: true,
            onSelect: function (date) {
                // Your CSS changes, just in case you still need them
                $('a.ui-state-default').removeClass('ui-state-highlight');
                $(this).addClass('ui-state-highlight');
                var dateFormat = $("#DtSubmission,#DtAckSlipReceive,#DtTaxCerRcv,#DtTexExtension").datepicker("option", "dateFormat");
                //setter
                $("#DtSubmission,#DtAckSlipReceive,#DtTaxCerRcv,#DtTexExtension").datepicker("option", "dateFormat", 'dd-M-yy');
            }
        });


        function Behavior_delete() {

            var BehaveId = $("#BehaveId").val();
            // alert(DesigId);
            $.ajax({

                url: '@Url.Action("DeleteClientTaxInfo", "Tax")',
                data: JSON.stringify({ id: BehaveId }), //use id here
                //data: JSON.stringify(salesmain),
                type: 'POST',
                contentType: 'application/json;',
                dataType: 'json',
                success: function (result) {
                    debugger;
                    if (result.Success == "1") {
                        customFile('3', result.ex);
                        window.setTimeout(function () {
                            // Move to a new location or you can do something else
                            window.location.href = '@Url.Action("ClientTaxInfoList", "Tax")';
                        }, 500);
                    }
                    else {
                        toastr.error(result.ex);
                    }
                }
            });
        }
    </script>

